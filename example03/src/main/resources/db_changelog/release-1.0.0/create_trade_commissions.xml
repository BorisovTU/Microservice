<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="release-1.0.0_create_trade_commissions_table" author="Borisov-AAlek">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="trade_commissions"/>
            </not>
        </preConditions>

        <createTable tableName="trade_commissions" remarks="Комиссия по сделке FX">
            <column name="id" type="BIGSERIAL" remarks="Идентификатор">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="trade_id" type="BIGINT" remarks="Идентификатор сделки">
                <constraints nullable="false" foreignKeyName="fk_trade_commissions_trade_id" references="trades(id)"/>
            </column>

            <column name="commission_id" type="INTEGER" remarks="Идентификатор комиссии">
                <constraints nullable="false"/>
            </column>

            <column name="sum" type="NUMERIC" remarks="Сумма комиссии">
                <constraints nullable="false"/>
            </column>

            <column name="nds" type="NUMERIC" remarks="Сумма НДС комиссии. При наличии."/>
        </createTable>

        <rollback>
            <dropTable tableName="trade_commissions"/>
        </rollback>
    </changeSet>

</databaseChangeLog>