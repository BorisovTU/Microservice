<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="release-1.0.0_create_orders" author="Borisov-AAlek">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders"/>
            </not>
        </preConditions>

        <createTable tableName="orders" remarks="Заявки на сделки FX">
            <column name="id" type="BIGSERIAL" remarks="Идентификатор">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="code" type="TEXT" remarks="Код заявки"/>

            <column name="external_code" type="TEXT" remarks="Внешний код заявки"/>

            <column name="created_date" type="TIMESTAMP" remarks="Дата и время подачи заявки">
                <constraints nullable="false"/>
            </column>

            <column name="contract_id" type="BIGINT" remarks="Идентификатор договора клиента">
                <constraints nullable="false"/>
            </column>

            <column name="client_id" type="BIGINT" remarks="Идентификатор клиента">
                <constraints nullable="false"/>
            </column>

            <column name="direction" type="TEXT" remarks="Направление">
                <constraints nullable="false"/>
            </column>

            <column name="fiid" type="BIGINT" remarks="Идентификатор финансового инструмента">
                <constraints nullable="false"/>
            </column>

            <column name="amount" type="NUMERIC" remarks="Количество">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="NUMERIC" remarks="Цена">
                <constraints nullable="false"/>
            </column>

            <column name="price_type" type="INTEGER" remarks="Тип цены">
                <constraints nullable="false"/>
            </column>

            <column name="price_fiid" type="BIGINT" remarks="Финансовый инструмент цены">
                <constraints nullable="false"/>
            </column>

            <column name="status_id" type="INTEGER" remarks="Статус">
                <constraints nullable="false" foreignKeyName="fk_orders_status" references="order_status(id)"/>
            </column>

            <column name="counterparty_id" type="BIGINT" remarks="Идентификатор контрагента">
                <constraints nullable="false"/>
            </column>

            <column name="exchange_id" type="BIGINT" remarks="Идентификатор биржи">
                <constraints nullable="false"/>
            </column>

            <column name="order_methods_id" type="INTEGER" remarks="Метод подачи">
                <constraints nullable="false" foreignKeyName="fk_orders_order_methods" references="order_methods(id)"/>
            </column>

            <column name="last_update_time" type="TIMESTAMP" remarks="Время последнего обновления">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_orders_external_code" tableName="orders">
            <column name="external_code"/>
        </createIndex>

        <createIndex indexName="idx_orders_created_date" tableName="orders">
            <column name="created_date"/>
        </createIndex>

        <createIndex indexName="idx_orders_client_id" tableName="orders">
            <column name="client_id"/>
        </createIndex>

        <createIndex indexName="idx_orders_status_id" tableName="orders">
            <column name="status_id"/>
        </createIndex>

        <createIndex indexName="idx_orders_fiid" tableName="orders">
            <column name="fiid"/>
        </createIndex>

        <rollback>
            <dropTable tableName="orders"/>
        </rollback>
    </changeSet>

</databaseChangeLog>