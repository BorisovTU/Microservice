<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="release-1.0.0_create_trades" author="Borisov-AAlek">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="trades"/>
            </not>
        </preConditions>

        <createTable tableName="trades" remarks="Таблица сделок FX">
            <column name="id" type="BIGSERIAL" remarks="Идентификатор">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="trade_kind" type="INTEGER" remarks="Вид сделки">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="TEXT" remarks="Код сделки"/>

            <column name="external_code" type="TEXT" remarks="Внешний код сделки"/>

            <column name="direction" type="TEXT" remarks="Направление">
                <constraints nullable="false"/>
            </column>

            <column name="created_date" type="TIMESTAMP" remarks="Время заключения сделки">
                <constraints nullable="false"/>
            </column>

            <column name="contract_id" type="BIGINT" remarks="Идентификатор договора клиента">
                <constraints nullable="false"/>
            </column>

            <column name="client_id" type="BIGINT" remarks="Идентификатор клиента">
                <constraints nullable="false"/>
            </column>

            <column name="fiid" type="BIGINT" remarks="Идентификатор финансового инструмента">
                <constraints nullable="false"/>
            </column>

            <column name="amount" type="NUMERIC" remarks="Количество">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="NUMERIC" remarks="Первичная цена">
                <constraints nullable="false"/>
            </column>

            <column name="clearing_date" type="TIMESTAMP" remarks="Дата клиринга"/>

            <column name="counterparty_id" type="BIGINT" remarks="Идентификатор контрагента">
                <constraints nullable="false"/>
            </column>

            <column name="exchange_id" type="BIGINT" remarks="Идентификатор биржи">
                <constraints nullable="false"/>
            </column>

            <column name="order_id" type="BIGINT" remarks="Идентификатор заявки">
                <constraints nullable="false" foreignKeyName="fk_trades_order_id" references="orders(id)"/>
            </column>

            <column name="marketscheme" type="INTEGER" remarks="Схема расчетов">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_trades_external_code" tableName="trades">
            <column name="external_code"/>
        </createIndex>

        <createIndex indexName="idx_trades_created_date" tableName="trades">
            <column name="created_date"/>
        </createIndex>

        <createIndex indexName="idx_trades_client_id" tableName="trades">
            <column name="client_id"/>
        </createIndex>

        <createIndex indexName="idx_trades_order_id" tableName="trades">
            <column name="order_id"/>
        </createIndex>

        <createIndex indexName="idx_trades_fiid" tableName="trades">
            <column name="fiid"/>
        </createIndex>

        <createIndex indexName="idx_trades_clearing_date" tableName="trades">
            <column name="clearing_date"/>
        </createIndex>

        <rollback>
            <dropTable tableName="trades"/>
        </rollback>
    </changeSet>

</databaseChangeLog>