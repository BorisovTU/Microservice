<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="release-1.0.0_create_order_status" author="Borisov-AAlek">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_status"/>
            </not>
        </preConditions>

        <createTable tableName="order_status" remarks="Справочник статусов заявок FX">
            <column name="id" type="INTEGER" remarks="Первичный ключ">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="status" type="TEXT" remarks="Статус заявки">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="order_status">
            <column name="id" value="0"/>
            <column name="status" value="Активна"/>
        </insert>

        <insert tableName="order_status">
            <column name="id" value="1"/>
            <column name="status" value="Заключена сделка"/>
        </insert>

        <insert tableName="order_status">
            <column name="id" value="2"/>
            <column name="status" value="Снята биржей"/>
        </insert>

        <insert tableName="order_status">
            <column name="id" value="3"/>
            <column name="status" value="Снята участником торгов"/>
        </insert>

        <insert tableName="order_status">
            <column name="id" value="4"/>
            <column name="status" value="Отклонена биржей"/>
        </insert>

        <insert tableName="order_status">
            <column name="id" value="5"/>
            <column name="status" value="Отказано контрагентом"/>
        </insert>

        <insert tableName="order_status">
            <column name="id" value="6"/>
            <column name="status" value="Ожидает активации"/>
        </insert>

        <rollback>
            <dropTable tableName="order_status"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
