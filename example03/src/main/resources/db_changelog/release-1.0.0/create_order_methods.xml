<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="release-1.0.0_create_order-methods" author="Borisov-AAlek">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_methods"/>
            </not>
        </preConditions>

        <createTable tableName="order_methods" remarks="Справочник способов подачи заявок">
            <column name="id" type="INTEGER" remarks="Первичный ключ">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="order_method" type="TEXT" remarks="Способ подачи заявки">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="order_methods">
            <column name="id" value="1"/>
            <column name="order_method" value="Электронный документ"/>
        </insert>

        <insert tableName="order_methods">
            <column name="id" value="2"/>
            <column name="order_method" value="Бумажный документ"/>
        </insert>

        <insert tableName="order_methods">
            <column name="id" value="3"/>
            <column name="order_method" value="Голосовое сообщение"/>
        </insert>

        <insert tableName="order_methods">
            <column name="id" value="4"/>
            <column name="order_method" value="Иной"/>
        </insert>

        <rollback>
            <dropTable tableName="order_methods"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
