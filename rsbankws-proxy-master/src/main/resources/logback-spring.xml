<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false">
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <springProperty name="logstashEnabled" source="logging.logstash.enabled"/>
    <if condition='${logstashEnabled} == true'>
        <then>
            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <timestampPattern>dd-MM-yyyy' 'HH:mm:ss.SSS</timestampPattern>
                    <fieldNames>
                        <timestamp>timestamp</timestamp>
                        <version>[ignore]</version>
                        <levelValue>[ignore]</levelValue>
                    </fieldNames>
                </encoder>
            </appender>
        </then>
        <else>
            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>
                        %d{dd-MM-yyyy HH:mm:ss.SSS} [%X{traceId:-}-%X{spanId:-}] [%thread] %-5level %logger{36}.%M - %msg%n
                    </pattern>
                </encoder>
            </appender>
        </else>
    </if>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
