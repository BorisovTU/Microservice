<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_table_view_ca_notification" author="borisov-tyur">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="view_ca_notification" />
            </not>
        </preConditions>
        <createTable tableName="view_ca_notification">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="caid" type="BIGINT"/>
            <column name="cftid" type="BIGINT"/>
            <column name="create_date_time" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="payload" type="JSONB"/>

            <column name="start_dt" type="DATE"/>
            <column name="rspnddln" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>
</databaseChangeLog>