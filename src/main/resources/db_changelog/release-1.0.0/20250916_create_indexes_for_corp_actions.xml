<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Индексы для ViewCaInstructionRepository -->
    <changeSet id="create_indexes_view_ca_instruction" author="borisov-tyur">
        <preConditions  onFail="MARK_RAN">
            <tableExists tableName="view_ca_instruction" schemaName="${default.schema}"/>
        </preConditions>

        <!-- Индекс для поиска по instr_nmb (уникальный, т.к. используется в findByInstrNmb) -->
        <createIndex indexName="idx_view_ca_instruction_instr_nmb"
                     tableName="view_ca_instruction"
                     schemaName="${default.schema}"
                     unique="true">
            <column name="instr_nmb"/>
        </createIndex>

        <createIndex indexName="idx_view_ca_instruction_cftid"
                     tableName="view_ca_instruction"
                     schemaName="${default.schema}">
            <column name="cftid" descending="true"/>
        </createIndex>
    </changeSet>

    <!-- Индексы для ViewCANotificationRepository -->
    <changeSet id="create_indexes_view_ca_notification" author="borisov-tyur">
        <preConditions  onFail="MARK_RAN">
            <tableExists tableName="view_ca_notification" schemaName="${default.schema}"/>
        </preConditions>

        <!-- Индекс для поиска по caid и cftid (getFirstByCaidAndCftidOrderByCreateDateTimeDesc) -->
        <createIndex indexName="idx_view_ca_notification_caid_cftid_create_dt"
                     tableName="view_ca_notification"
                     schemaName="${default.schema}">
            <column name="caid"/>
            <column name="cftid"/>
            <column name="create_date_time" descending="true"/>
        </createIndex>

        <createIndex indexName="idx_view_ca_notification_cftid"
                     tableName="view_ca_notification"
                     schemaName="${default.schema}">
            <column name="cftid"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>