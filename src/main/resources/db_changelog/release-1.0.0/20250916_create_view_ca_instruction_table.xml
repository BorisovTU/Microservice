<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_table_view_ca_instruction" author="borisov-tyur">
        <preConditions>
            <not>
                <tableExists tableName="view_ca_instruction" />
            </not>
        </preConditions>
        <createTable tableName="view_ca_instruction">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="instr_nmb" type="UUID"/>
            <column name="cftid" type="BIGINT"/>
            <column name="instr_dt" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="status" type="VARCHAR(155)"/>
            <column name="payload" type="JSONB"/>
        </createTable>
    </changeSet>
</databaseChangeLog>