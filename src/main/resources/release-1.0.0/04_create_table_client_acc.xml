<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_client_acc" author="borisov-tyu">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client_acc"/>
            </not>
        </preConditions>
        <createTable tableName="client_acc">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="cftid" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="acc_depo" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="bal" type="BIGINT" />
            <column name="sub_acc_depo" type="VARCHAR(40)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addPrimaryKey
                tableName="client_acc"
                columnNames="id"
                constraintName="client_acc_pkey"/>
        <createIndex tableName="client_acc" indexName="client_acc_depo_idx">
            <column name="acc_depo" />
        </createIndex>
        <createIndex tableName="client_acc" indexName="client_acc_depo_cft_id_idx">
            <column name="acc_depo" />
            <column name="cftid" />
        </createIndex>
    </changeSet>
</databaseChangeLog>