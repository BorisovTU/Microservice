<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="create_table_corp_actions_opt_details" author="borisov-tyu">
        <createTable tableName="corp_actions_opt_details" remarks="Таблица опций контракта">
            <column name="id" type="UUID" remarks="Уникальный идентификатор записи">
                <constraints primaryKey="true" primaryKeyName="pk_corp_actions_opt_details" nullable="false"/>
            </column>
            <column name="caid" type="BIGINT" remarks="Идентификатор КД в Диасофт">
                <constraints nullable="false"/>
            </column>
            <column name="option_number" type="BIGINT" remarks="Номер опции">
                <constraints nullable="true"/>
            </column>
            <column name="option_type" type="VARCHAR(50)" remarks="Тип опции">
                <constraints nullable="true"/>
            </column>
            <column name="dflt_optn_ind" type="BOOLEAN" remarks="Признак опции по умолчанию">
                <constraints nullable="true"/>
            </column>
            <column name="pric_val" type="BIGINT" remarks="Значение цены">
                <constraints nullable="true"/>
            </column>
            <column name="pric_val_ccy" type="VARCHAR(50)" remarks="Валюта цены">
                <constraints nullable="true"/>
            </column>
            <column name="start_dt" type="DATE" remarks="Дата начала действия">
                <constraints nullable="true"/>
            </column>
            <column name="end_dt" type="DATE" remarks="Дата окончания действия">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>