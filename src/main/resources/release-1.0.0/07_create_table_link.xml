<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="create_table_link" author="borisov-tyu">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="link"/>
            </not>
        </preConditions>
        <createTable tableName="link">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="link_pkey"/>
            </column>
            <column name="caid" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="acc_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="result_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="link"
                baseColumnNames="caid"
                referencedTableName="corp_actions"
                referencedColumnNames="caid"
                constraintName="fk_link_corp_actions"/>
        <addForeignKeyConstraint
                baseTableName="link"
                baseColumnNames="acc_id"
                referencedTableName="client_acc"
                referencedColumnNames="id"
                constraintName="fk_link_client_acc"/>
        <addForeignKeyConstraint
                baseTableName="link"
                baseColumnNames="result_id"
                referencedTableName="result"
                referencedColumnNames="id"
                constraintName="fk_link_result"/>
        <createIndex tableName="link" indexName="link_caid_accId_idx">
            <column name="caid" />
            <column name="acc_id" />
        </createIndex>
    </changeSet>
</databaseChangeLog>