<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="BOSS-6449_BOSS-6450_alter_config" author="Simanov">
        <addColumn tableName="nontrading_autorun_config">
            <column name="currency" type="varchar2(3)" remarks="Валюта">
                <constraints nullable="true"/>
            </column>
            <column name="is_iis" type="number(1)" defaultValueNumeric="0" remarks="Признак ИИС">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addDefaultValue tableName="nontrading_autorun_config" columnName="is_iis" defaultValueComputed="null" />

        <update tableName="nontrading_autorun_config">
            <column name="currency" value="RUR"/>
        </update>
    </changeSet>
</databaseChangeLog>