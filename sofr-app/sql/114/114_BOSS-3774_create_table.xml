    <createTable tableName="DEMAIL_RISK_NOTIFY_DBT" remarks="Логи по ошибкам отправки уведомлений">
      <column name="T_ID" type="NUMBER(10)" remarks="ID записи"/>
      <column name="T_HEAD" type="VARCHAR2(200)" remarks="Заголовок письма"/>
      <column name="T_DATECREATE" type="DATE" remarks="Дата/время создания записи"/>
      <column name="T_RECIPIENTEMAIL" type="VARCHAR2(2000)" remarks="Email получателя"/>
	  <column name="T_SENDEREMAIL" type="VARCHAR2(2000)" remarks="Email отправителя"/>
      <column name="T_ERRORTEXT" type="VARCHAR2(2000)" remarks="Текст ошибки"/>
      <column name="T_DLCONTRID" type="NUMBER(10)" remarks="ID договора"/>
    </createTable>

    <createIndex indexName="DEMAIL_RISK_NOTIFY_DBT_IDX0" tableName="DEMAIL_RISK_NOTIFY_DBT" unique="true">
