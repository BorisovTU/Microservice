<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="120_BOSS-7584_insert_regval" author="Shestakov">
    <!-- COMMON\НДФЛ ОБРАБОТКА_ЗАПРОСА_SINV_НФДЛ = YES -->
    <insert tableName="dregparm_dbt">
        <column name="t_keyId" valueNumeric="0" />
        <column name="t_ParentId" valueComputed="(SELECT t_keyid from (select p.t_keyid,SYS_CONNECT_BY_PATH(p.t_name, '/') Path
                                                    from dregparm_dbt p
                                                 connect by prior p.t_keyid=p.t_parentid start with p.t_parentid=0)
                                            where Path='/COMMON/НДФЛ')" />
        <column name="t_Name" value="ОБРАБОТКА_ЗАПРОСА_SINV_НФДЛ" />
        <column name="t_Type" valueNumeric="4" />
        <column name="t_Global" valueComputed="CHR(88)" />
        <column name="t_Description" value="Автоматическая обработка запросов Свои инвестиции на формирование справки НФДЛ" />
        <column name="t_Security" valueComputed="CHR(0)" />
        <column name="t_IsBranch" valueComputed="CHR(0)" />
    </insert>
    <insert tableName="dregval_dbt">
        <column name="T_KEYID" valueComputed="(select t_keyid 
                                                 from dregparm_dbt 
                                                where t_parentid = (SELECT t_keyid                                               
                                                                      from (select p.t_keyid,SYS_CONNECT_BY_PATH(p.t_name, '/') Path                                     
                                                                              from dregparm_dbt p                     
                                                                           connect by prior p.t_keyid=p.t_parentid start with p.t_parentid=0)                                 
                                                                     where Path='/COMMON/НДФЛ')
                                                                       and t_name = 'ОБРАБОТКА_ЗАПРОСА_SINV_НФДЛ' )" />
        <column name="T_REGKIND" valueNumeric="0" />
        <column name="T_OBJECTID" valueNumeric="0" />
        <column name="T_BLOCKUSERVALUE" valueComputed="CHR(0)" />
        <column name="T_EXPDEP" valueNumeric="0" />
        <column name="T_LINTVALUE" valueNumeric="88" />
        <column name="T_LDOUBLEVALUE" valueNumeric="0" />
    </insert>
	
	<!-- COMMON\НДФЛ MAX_ВРЕМЯ_ФОРМ_НДФЛ_SINV = 120	 -->
    <insert tableName="dregparm_dbt">
        <column name="t_keyId" valueNumeric="0" />
        <column name="t_ParentId" valueComputed="(SELECT t_keyid from (select p.t_keyid,SYS_CONNECT_BY_PATH(p.t_name, '/') Path
                                                    from dregparm_dbt p
                                                 connect by prior p.t_keyid=p.t_parentid start with p.t_parentid=0)
                                            where Path='/COMMON/НДФЛ')" />
        <column name="t_Name" value="MAX_ВРЕМЯ_ФОРМ_НДФЛ_SINV" />
        <column name="t_Type" valueNumeric="0" />
        <column name="t_Global" valueComputed="CHR(88)" />
        <column name="t_Description" value="Лимит времени для формирования справки НДФЛ в СОФРе по запросу Свои инвестиции" />
        <column name="t_Security" valueComputed="CHR(0)" />
        <column name="t_IsBranch" valueComputed="CHR(0)" />
    </insert>
    <insert tableName="dregval_dbt">
        <column name="T_KEYID" valueComputed="(select t_keyid 
                                                 from dregparm_dbt 
                                                where t_parentid = (SELECT t_keyid                                               
                                                                      from (select p.t_keyid,SYS_CONNECT_BY_PATH(p.t_name, '/') Path                                     
                                                                              from dregparm_dbt p                     
                                                                           connect by prior p.t_keyid=p.t_parentid start with p.t_parentid=0)                                 
                                                                     where Path='/COMMON/НДФЛ')
                                                                       and t_name = 'MAX_ВРЕМЯ_ФОРМ_НДФЛ_SINV' )" />
        <column name="T_REGKIND" valueNumeric="0" />
        <column name="T_OBJECTID" valueNumeric="0" />
        <column name="T_BLOCKUSERVALUE" valueComputed="CHR(0)" />
        <column name="T_EXPDEP" valueNumeric="0" />
        <column name="T_LINTVALUE" valueNumeric="120" />
        <column name="T_LDOUBLEVALUE" valueNumeric="0" />
    </insert>
  </changeSet>
</databaseChangeLog>