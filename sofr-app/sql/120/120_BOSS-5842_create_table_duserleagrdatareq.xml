  <changeSet id="120_BOSS-5842_create_table_duserleagrdatareq" author="Toporkov">
    <createTable tableName="DUSERLEAGRDATAREQ_DBT" remarks="Экземпляры запросов с условиями договора БО">
      <column name="T_ID" type="NUMBER(10)" remarks="Идентификатор операции"/>
      <column name="T_REQGUID" type="VARCHAR(100)" remarks="Идентификатор запроса из JSON"/>
      <column name="T_REQDATE" type="DATE" remarks="Дата и время отправки запроса из JSON"/>
      <column name="T_REQJSON" type="CLOB" remarks="JSON запроса с данными"/>
      <column name="T_CLIENTCFTID" type="VARCHAR2(20)" remarks="Идентификатор клиента CFT из JSON"/>
      <column name="T_PARTYID" type="NUMBER(10)" remarks="Идентификатор клиента в СОФР"/>
      <column name="T_DLCONTRID" type="NUMBER(10)" remarks="Идентификатор ДБО клиента в СОФР"/>
      <column name="T_STATE" type="NUMBER(3)" remarks="Статус выполнения: 0 - Получен запрос; 8 - Обработка завершена; 9 - Ответ отправлен"/>
      <column name="T_ERRORCODE" type="NUMBER(10)" remarks="Код ошибки (0 - Успех)"/>
      <column name="T_ERRORTEXT" type="VARCHAR2(300)" remarks="Текст ошибки"/>
      <column name="T_SYSDATE" type="DATE" defaultValueComputed="SYSDATE" remarks="Системная дата создания. Дата и время создания записи в таблице"/>
    </createTable>

    <createIndex indexName="DUSERLEAGRDATAREQ_DBT_IDX0" tableName="DUSERLEAGRDATAREQ_DBT" unique="true" tablespace="INDX">
      <column name="T_ID"/>
    </createIndex>

    <createSequence sequenceName="DUSERLEAGRDATAREQ_DBT_SEQ" startValue="1" maxValue="999999999999999999999999999" minValue="1" cacheSize="0"/>
  </changeSet>

