<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="120_BOSS-2229_create_ddl_wrtoffdebtsumvaltrn" author="Zhits">
    <createTable tableName="DDL_WRTOFFDEBTSUMVALTRN_DBT" remarks="Таблица сформированных проводок по списанию прочей задолженности">
      <column name="T_DEBTSUMVALID" type="NUMBER(10)" remarks="Идентификатор суммы задолженности"/>
      <column name="T_ACCTRNID" type="NUMBER(10)" remarks="Идентификатор проводки"/>
    </createTable>

    <createIndex indexName="DDL_WRTOFFDEBTSUMVALTRN_DBT_IDX0" tableName="DDL_WRTOFFDEBTSUMVALTRN_DBT" unique="false">
      <column name="T_DEBTSUMVALID"/>
    </createIndex>
  </changeSet>

  <changeSet id="120_BOSS-2229_alter_ddl_wrtoffdebtsumval" author="Zhits">
    <renameColumn tableName="DDL_WRTOFFDEBTSUMVAL_DBT" newColumnName="T_DEBTSOURCEID" oldColumnName="T_DEBTID" remarks="Идентификатор источника задолженности"/>
  </changeSet>

  <changeSet id="120_BOSS-2229_alter_ddl_wrtoffdebtsumval_tmp" author="Zhits">
    <renameColumn tableName="DDL_WRTOFFDEBTSUMVAL_TMP" newColumnName="T_DEBTSOURCEID" oldColumnName="T_DEBTID" remarks="Идентификатор источника задолженности"/>
  </changeSet>

  <changeSet id="120_BOSS-2229_alter_ddl_enrolldebtsumtrn" author="Zhits">
    <renameColumn tableName="DDL_ENROLLDEBTSUMTRN_DBT" newColumnName="T_ACCTRNID" oldColumnName="T_ACCTRN"/>

    <createIndex indexName="DDL_ENROLLDEBTSUMTRN_DBT_IDX0" tableName="DDL_ENROLLDEBTSUMTRN_DBT" unique="false">
      <column name="T_DEBTID"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>