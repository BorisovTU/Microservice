<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="BOSS-217_create_secur_redemptions" author="Simanov">
        <createTable tableName="secur_redemptions" remarks="Поагшения ценных бумаг">
            <column name="redemption_id" type="number(10)" remarks="ИД погашения">
                <constraints primaryKey="true" primaryKeyName="pk_sec_redemptions"/>
            </column>

            <column name="message_type" type="varchar2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="fix_date" type="date" remarks="Дата фиксации">
                <constraints nullable="false"/>
            </column>

            <column name="complete_date" type="date" remarks="Дата исполнения">
                <constraints nullable="false"/>
            </column>

            <column name="source_number" type="varchar2(50)" remarks="Номер в исходной системе">
                <constraints nullable="false"/>
            </column>

            <column name="source_id" type="number(20)" remarks="ИД в исходной системе">
                <constraints nullable="false"/>
            </column>

            <column name="action_type" type="varchar2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="list_owners_date" type="date" remarks="Дата составления перечня владельцев">
                <constraints nullable="false"/>
            </column>

            <column name="depositary_id" type="number(10)" remarks="ИД депозитария">
                <constraints nullable="false"/>
            </column>

            <column name="isin" type="varchar2(20)"/>
            <column name="reg_number" type="varchar2(20)"/>
            <column name="nrd_code" type="varchar2(20)" remarks="Код бумаги в НРД"/>

            <column name="quantity" type="number(20, 6)" remarks="Количество бумаг для погашения">
                <constraints nullable="false"/>
            </column>

            <column name="deal_id" type="number(10)" remarks="ИД созданной операции погашения">
                <constraints nullable="false"/>
            </column>

            <column name="status_id" type="number(5)">
                <constraints nullable="false" foreignKeyName="fk_sec_redemptions_status_id" references="secur_redemption_statuses(status_id)"/>
            </column>

            <column name="created_time" type="timestamp" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>

            <column name="updated_time" type="timestamp" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="secur_redemptions" indexName="idx_sec_redemptions_status_id">
            <column name="status_id"/>
        </createIndex>

        <createIndex tableName="secur_redemptions" indexName="idx_sec_redemptions_deal_id" unique="true">
            <column name="deal_id"/>
        </createIndex>

        <createIndex tableName="secur_redemptions" indexName="idx_sec_redemptions_source_id" unique="true">
            <column name="source_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>