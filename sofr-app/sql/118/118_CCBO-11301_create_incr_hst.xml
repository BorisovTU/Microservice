<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

  <changeSet id="118_CCBO-11301_create_incr_hst" context="prod" author="Ponomareva">
    <createTable tableName="DDL_INCRATE_HST_DBT" remarks="История ставки РЕПО">
      <column name="T_ID" type="number(10)" remarks="Идентификатор"/>
      <column name="T_DEALID" type="number(10)" remarks="Идентификатор сделки"/>
      <column name="T_DOCKIND" type="varchar(5)" remarks="Вид документа сделки"/>
      <column name="T_INCOMERATE" type="FLOAT(53)" remarks="Ставка"/>
      <column name="T_FROMDATE" type="DATE" remarks="Дата начала ставки"/>
    </createTable>

    <createIndex indexName="DDL_INCRATE_HST_DBT_IDX0" tableName="DDL_INCRATE_HST_DBT" unique="true">
      <column name="T_ID"/>
    </createIndex>

    <createIndex indexName="DDL_INCRATE_HST_DBT_IDX1" tableName="DDL_INCRATE_HST_DBT" unique="false">
      <column name="T_DEALID"/>
      <column name="T_DOCKIND"/>
    </createIndex>

    <createIndex indexName="DDL_INCRATE_HST_DBT_IDX2" tableName="DDL_INCRATE_HST_DBT" unique="true">
      <column name="T_DEALID"/>
      <column name="T_DOCKIND"/>
      <column name="T_FROMDATE"/>
    </createIndex>

  </changeSet>
</databaseChangeLog>

