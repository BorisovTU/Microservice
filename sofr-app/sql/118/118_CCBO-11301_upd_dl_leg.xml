<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="118_CCBO-11301_upd_dl_leg" author="Ponomareva">
    <addColumn tableName="DDL_LEG_DBT">
      <column name="T_FLRATE" type="FLOAT(53)" defaultValueNumeric="0" remarks="Индикативная ставка"/>
      <column name="T_SPREDFLRT" type="FLOAT(53)" defaultValueNumeric="0" remarks="Спред к индикативной ставке "/>
      <column name="T_FLRTID" type="NUMBER(10)" defaultValueNumeric="-1" remarks="Индекс"/>
      <column name="T_ISFLRATE" type="CHAR(1)" defaultValueComputed="chr(0)"  remarks="Признак плавающей ставки"/>
    </addColumn>
    <update tableName="DDL_LEG_DBT">
      <column name="T_FLRATE" valueNumeric="0"/>
      <where>T_FLRATE IS NULL</where>
    </update>
    <update tableName="DDL_LEG_DBT">
      <column name="T_SPREDFLRT" valueNumeric="0"/>
      <where>T_SPREDFLRT IS NULL</where>
    </update> 
    <update tableName="DDL_LEG_DBT">
      <column name="T_FLRTID" valueNumeric="-1"/>
      <where>T_FLRTID IS NULL</where>
    </update> 
    <update tableName="DDL_LEG_DBT">
      <column name="T_ISFLRATE" valueComputed="chr(0)"/>
      <where>T_ISFLRATE IS NULL</where>
    </update> 
  </changeSet>
</databaseChangeLog>