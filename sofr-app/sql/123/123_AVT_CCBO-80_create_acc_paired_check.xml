  <changeSet id="123_AVT_CCBO-80_create_acc_paired_check" author="Vrubel">
    <createTable tableName="DACC_PARIED_CHECK_DBT" remarks="Экземпляры запросов с условиями договора БО">
      <column name="T_ID" type="NUMBER(10)" remarks="Идентификатор"/>
      <column name="T_ACCOUNTNUMBER" type="VARCHAR(51)" remarks="Номер счета из категории учета"/>
      <column name="T_CATID" type="NUMBER(10)" remarks="Категория учета"/>
      <column name="T_UPDATED_AT" type="TIMESTAMP" defaultValueComputed="SYSDATE" remarks="Дата обновления и время"/>
      <column name="T_IS_DELETED" type="CHAR(1)" remarks="Признак активного/удаленного счета"/>
    </createTable>

    <createIndex indexName="DACC_PARIED_CHECK_DBT_IDX0" tableName="DACC_PARIED_CHECK_DBT" unique="true" tablespace="INDX">
      <column name="T_ID"/>
    </createIndex>

    <createIndex indexName="DACC_PARIED_CHECK_DBT_IDX1" tableName="DACC_PARIED_CHECK_DBT" unique="true" tablespace="INDX">
      <column name="T_CATID"/>
      <column name="T_ACCOUNTNUMBER"/>
    </createIndex>

    <createSequence sequenceName="DACC_PARIED_CHECK_DBT_SEQ" startValue="1" maxValue="999999999999999999999999999" minValue="1" cacheSize="0"/>
  </changeSet>

