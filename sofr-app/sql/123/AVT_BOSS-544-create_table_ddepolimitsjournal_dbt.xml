<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-544-create_table_ddepolimitsjournal_dbt" author="Simanov">
        <createTable tableName="ddepolimitsjournal_dbt">
            <column name="id" type="number(12)" remarks="ИД">
                <constraints primaryKey="true" primaryKeyName="pk_depolimitsjournal"/>
            </column>

            <column name="t_firmid" type="varchar2(12)" remarks="Код фирмы">
                <constraints nullable="false"/>
            </column>

            <column name="t_clientcode" type="varchar2(12)" remarks="Код клиента">
                <constraints nullable="false"/>
            </column>

            <column name="t_seccode" type="varchar2(12)" remarks="Код инструмента">
                <constraints nullable="false"/>
            </column>

            <column name="t_CalcDateTime" type="date" remarks="Момент расчета портфеля">
                <constraints nullable="false"/>
            </column>

            <column name="t_CurrentBal" type="number(28, 8)" remarks="Текущая позиция">
                <constraints nullable="false"/>
            </column>

            <column name="t_Price" type="number(28, 8)" remarks="Цена, с использованием которой оценивается позиция в стоимости портфеля и марже">
                <constraints nullable="false"/>
            </column>

            <column name="t_PriceCurrCode" type="varchar2(4)" remarks="Валюта цены">
                <constraints nullable="false"/>
            </column>

            <column name="t_CrossRate" type="number(19, 8)" remarks="Курс валюты к валюте портфеля">
                <constraints nullable="false"/>
            </column>

            <column name="t_LongDiscount" type="number(28, 8)" remarks="Эффективный дисконт длинной позиции">
                <constraints nullable="false"/>
            </column>

            <column name="t_ShortDiscount" type="number(28, 8)" remarks="Эффективный дисконт короткой позиции">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" remarks="Время создания записи" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>