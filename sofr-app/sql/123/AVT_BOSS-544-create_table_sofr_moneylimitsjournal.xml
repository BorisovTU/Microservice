<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-544-create_table_sofr_moneylimitsjournal" author="Simanov">
        <createTable tableName="sofr_moneylimitsjournal">
            <column name="firmid" type="varchar2(12)" remarks="Код фирмы">
                <constraints nullable="false"/>
            </column>

            <column name="clientcode" type="varchar2(12)" remarks="Код клиента">
                <constraints nullable="false"/>
            </column>

            <column name="currcode" type="varchar2(12)" remarks="Код валюты">
                <constraints nullable="false"/>
            </column>

            <column name="CalcDateTime" type="date" remarks="Момент расчета портфеля">
                <constraints nullable="false"/>
            </column>

            <column name="CurrentBal" type="number(28, 8)" remarks="Текущая позиция">
                <constraints nullable="false"/>
            </column>

            <column name="CrossRate" type="number(19, 8)" remarks="Курс валюты к валюте портфеля">
                <constraints nullable="false"/>
            </column>

            <column name="LongDiscount" type="number(28, 8)" remarks="Эффективный дисконт длинной позиции">
                <constraints nullable="false"/>
            </column>

            <column name="ShortDiscount" type="number(28, 8)" remarks="Эффективный дисконт короткой позиции">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" remarks="Время создания записи" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>

            <column name="processing_id" type="varchar2(64)" remarks="ИД процесса, обрабатывающего запись" />

            <column name="processed_at" type="timestamp" remarks="Время обработки записи" />
        </createTable>
    </changeSet>
</databaseChangeLog>