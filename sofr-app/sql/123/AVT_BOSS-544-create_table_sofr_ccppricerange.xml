<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-544-create_table_sofr_ccppricerange" author="Simanov">
        <createTable tableName="sofr_ccppricerange">

            <column name="seccode" type="varchar2(12)" remarks="Код инструмента">
                <constraints nullable="false"/>
            </column>

            <column name="loaddate" type="date" remarks="Дата торговой сессии">
                <constraints nullable="false"/>
            </column>

            <column name="Discount_CCP" type="number(19, 8)" remarks="Рыночный риск, %.">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" remarks="Время создания записи" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>

            <column name="processing_id" type="varchar2(64)" remarks="ИД процесса, обрабатывающего запись" />

            <column name="processed_at" type="timestamp" remarks="Время обработки записи" />
        </createTable>
    </changeSet>
</databaseChangeLog>