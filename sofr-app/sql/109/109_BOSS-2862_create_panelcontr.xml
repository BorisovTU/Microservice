<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

  <changeSet id="109_BOSS-2862_create_panelcontr_dbt" context="prod" author="Ponomareva">
    <createTable tableName="D_RIA_PANELCONTRS_DBT" remarks="Договоры для отчета">
      <column name="T_SETFLAG" type="char" remarks="Признак выбора"/>
      <column name="T_CLIENTID" type="number(10)" remarks="ID клиента"/>
      <column name="T_DLCONTRID" type="number(10)" remarks="ID договора"/>
      <column name="T_CONTRNUMBER" type="varchar2(20)" remarks="номер договора"/>
      <column name="T_CONTRNAME" type="varchar2(200)" remarks="Наименование договора"/>
    </createTable>

    <createIndex indexName="D_RIA_PANELCONTRS_DBT_IDX0" tableName="D_RIA_PANELCONTRS_DBT" unique="false">
      <column name="T_SETFLAG"/>
      <column name="T_CLIENTID"/>
      <column name="T_DLCONTRID"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>

