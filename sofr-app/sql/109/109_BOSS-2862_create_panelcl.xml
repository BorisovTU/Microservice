  <changeSet id="109_BOSS-2862_create_panelcl_dbt" context="prod" author="Ponomareva">
    <createTable tableName="D_RIA_PANELCLIENTS_DBT" remarks="Клиенты для отчета">
      <column name="T_SETFLAG" type="char" remarks="Признак выбора"/>
      <column name="T_CLIENTID" type="number(10)"  remarks="ID клиента"/>
      <column name="T_CLIENTCODE" type="varchar2(30)" remarks="Код клиента"/>
      <column name="T_CLIENTNAME" type="varchar2(320)" remarks="Наименование клиента"/>
    </createTable>

    <createIndex indexName="D_RIA_PANELCLIENTS_DBT_IDX0" tableName="D_RIA_PANELCLIENTS_DBT" unique="false">
      <column name="T_SETFLAG"/>
      <column name="T_CLIENTID"/>
