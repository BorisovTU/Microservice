<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

  <changeSet id="109_DEF-73411_upd_tables_cl" context="prod" author="Ponomareva">
    <dropTable tableName="D_RIA_PANELCLIENTS_DBT"/>
    <createTable tableName="D_RIA_PANELCLIENTS_DBT" remarks="Клиенты для отчета">
      <column name="T_SESSIONID" type="number(10)" remarks="Номер сессии"/>
      <column name="T_CALCID" type="number(10)"  remarks="номер расчетов"/>
      <column name="T_CLIENTID" type="number(10)" remarks="Код клиента"/>
    </createTable>

    <dropTable tableName="D_RIA_PANELCONTRS_DBT"/>
    <createTable tableName="D_RIA_PANELCONTRS_DBT" remarks="Договоры для отчета">
      <column name="T_SESSIONID" type="number(10)" remarks="Номер сессии"/>
      <column name="T_CALCID" type="number(10)"  remarks="номер расчетов"/>
      <column name="T_CLIENTID" type="number(10)" remarks="Код клиента"/>
      <column name="T_DLCONTRID" type="number(10)" remarks="ID договора"/>
    </createTable>
  </changeSet>
</databaseChangeLog>

