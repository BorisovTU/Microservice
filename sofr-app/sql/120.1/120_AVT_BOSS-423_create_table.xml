   <changeSet id="120_AVT_BOSS-423_create_table" author="Shestakov" >

      <createTable tableName="DNPTXMESSAGE_DBT"               remarks="Таблица шаблонов клиентских уведомлений">
         <column name="T_ID"            type="NUMBER(10)"     remarks="Уникальный номер записи"/>
         <column name="T_NAME_MESSAGE"  type="VARCHAR(100)"   remarks="Вид уведомления"/>
		 <column name="T_TYPEID"   		type="NUMBER(10)"     remarks="Тип уведомления"/>
         <column name="T_NAME"  	  	type="VARCHAR(300)"   remarks="Наименование шаблона"/>
		 <column name="T_TITLE"    		type="VARCHAR(300)"   remarks="Тема письма"/>
		 <column name="T_COMMENTS"   	type="VARCHAR(3000)"  remarks="Тело письма"/>
         <column name="T_DATE_CREATE"  	type="DATE"           remarks="Дата создания"/>
         <column name="T_DATE_EDITING" 	type="DATE"           remarks="Дата редактирования"/>	 
         <column name="T_OPER"  		type="VARCHAR(100)"   remarks="ФИО инициатора"/>
         <column name="T_ID_OPER"     	type="NUMBER(10)"     remarks="Id инициатора"/>
      </createTable>

      <createIndex indexName="DNPTXMESSAGE_DBT_IDX0" tableName="DNPTXMESSAGE_DBT" unique="true" tablespace="INDX">
         <column name="T_ID"/>
      </createIndex>
      
      <createSequence sequenceName="DNPTXMESSAGE_DBT_SEQ" startValue="1" maxValue="999999999999999999999999999" minValue="1" cacheSize="0"/>
	  
   </changeSet>
   
