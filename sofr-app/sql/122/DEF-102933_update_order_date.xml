<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
    <changeSet id="DEF-102933_update_order_date" author="Simanov">
        <update tableName="nontrading_orders_buffer">
            <column name="req_time" valueComputed="req_time + 3/24"/>
            <column name="req_date" valueComputed="trunc(req_time + 3/24)"/>
            <where>src in ('Свои Инвестиции','ДБО ЮЛ') and operation_id is not null</where>
        </update>


        <update tableName="dspground_dbt">
            <column name="t_registrtime" valueComputed="t_registrtime + 3/24"/>
            <column name="t_registrdate" valueComputed="trunc(t_registrtime + 3/24)"/>
            <column name="t_signeddate" valueComputed="trunc(t_registrtime + 3/24)"/>
            <where>t_spgroundid in (select gd.t_spgroundid
                                    from nontrading_orders_buffer b
                                    join dspgrdoc_dbt gd on gd.t_sourcedocid = b.operation_id
                                                        and gd.t_sourcedockind = 4607
                                    where b.src in ('Свои Инвестиции','ДБО ЮЛ')
                                    and b.operation_id is not null)</where>
        </update>
    </changeSet>
</databaseChangeLog>