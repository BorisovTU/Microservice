<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="122_AVT_BOSS-1038_update_regval" author="Shestakov"> 
    <update tableName="DREGVAL_DBT">
      <column name="T_LINTVALUE" valueNumeric="88"/>	
      <where>T_KEYID = (SELECT t_keyid 
                          FROM dregparm_dbt 
                         WHERE t_parentid = (SELECT t_keyid                                               
                                               FROM (SELECT p.t_keyid,SYS_CONNECT_BY_PATH(p.t_name, '/') Path                                   
                                                       FROM dregparm_dbt p            
                                                    connect by prior p.t_keyid=p.t_parentid start with p.t_parentid=0)                              
                                              WHERE Path like '/РСХБ/БРОКЕРСКОЕ ОБСЛУЖИВАНИЕ/ИНТЕГРАЦИЯ КАФКА')
                           AND t_name = 'ПУШ-УВЕДОМЛЕНИЯ ПО ВЫПЛАТАМ ЦБ')</where>
    </update>
  </changeSet>
</databaseChangeLog>