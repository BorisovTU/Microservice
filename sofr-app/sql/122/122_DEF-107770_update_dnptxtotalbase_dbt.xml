<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="122_DEF-107770_update_dnptxtotalbase_dbt" author="Farshatov">

    <update tableName="dnptxtotalbase_dbt">
      <column name="t_specialtag" value="ВЕКС" />
      <where>t_description like '%Получение дохода по векселям%' and t_taxbasekind = 2</where>
    </update>
    
    <update tableName="dnptxtotalbase_dbt">
      <column name="t_specialtag" value="МАТ" />
      <where>t_description like '%Мат. выгода%' </where>
    </update>

    <update tableName="dnptxtotalbase_dbt">
      <column name="t_specialtag" value="БРОК" />
      <where>t_description not like '%Мат. выгода%' and t_description not like '%Получение дохода по векселям%' and t_taxbasekind = 2 </where>
    </update>

  </changeSet>
</databaseChangeLog>