<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="110_BOSS-4999_email_group_1" author="Shestakov">
    <preConditions onFail="MARK_RAN">
      <not>
        <changeSetExecuted id="111_BOSS-4999_email_group_1" author="Shestakov" changeLogFile="111/111_BOSS-4999_email_group_1.xml" />
      </not>
    </preConditions>

    <insert tableName="DLLVALUES_DBT">
        <column name="T_LIST" value="5009" />
        <column name="T_ELEMENT" valueComputed="(select max(T_ELEMENT) + 1 from DLLVALUES_DBT v where t_list = 5009)"/>
        <column name="T_CODE" valueComputed="(select to_char(max(T_ELEMENT) + 1)  from DLLVALUES_DBT v where t_list = 5009)" />
        <column name="T_NAME" value="DBOMessErr" />
        <column name="T_FLAG" value="1" />
        <column name="T_NOTE" value="Сообщение об ошибках при формировании и отправке уведомлений об открытии ДБО\ИИС" />
        <column name="T_RESERVE" valueComputed="chr(1)" />
    </insert>
	 <insert tableName="USR_EMAIL_ADDR_DBT">
        <column name="T_GROUP" valueComputed="(select max(T_ELEMENT) from DLLVALUES_DBT where t_list = 5009 and T_NAME = 'DBOMessErr')"/>
        <column name="T_EMAIL" value="Broker@rshb.ru" />
        <column name="T_PLACE" value="R" />
        <column name="T_COMMENT" valueComputed="chr(1)" />
    </insert>
  </changeSet>
</databaseChangeLog>
