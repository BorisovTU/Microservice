<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="110_BOSS-3769_insert_itt_q_service" author="Zhits">
    <insert tableName="ITT_Q_CORRSYSTEM">
      <column name="SYSTEM_NAME" value="SINV"/>
      <column name="SYSTEM_CAPTION" value="Свои Инвестиции (обмен сообщений через KAFKA)"/>
      <column name="OUT_PACK_MESSAGE_PROC" value="it_sinv.out_pack_message"/>
    </insert>
    <insert tableName="ITT_Q_SERVICE">
      <column name="MESSAGE_TYPE" value="R"/>
      <column name="SERVICENAME" value="SINV.GetBrokerageReportInfo"/>
      <column name="SUBSCRIPTION" valueNumeric="0"/>
      <column name="SERVICE_PROC" value="IT_BrokerReport.GetReportFromSINV"/>
      <column name="SERVICE_CAPTION" value="BOSS-3575. Интеграция брокерского отчета в мобильное приложение Свои Инвестиции"/>
    </insert>
    <insert tableName="ITT_KAFKA_TOPIC">
      <column name="QUEUETYPE" value="IN"/>
      <column name="TOPIC_NAME" value="sinv.get-brokerage-report-info-request"/>
      <column name="TOPIC_CAPTION" value="BOSS-3575. Интеграция брокерского отчета в мобильное приложение Свои Инвестиции_запрос"/>
      <column name="SYSTEM_NAME" value="SINV"/>
      <column name="SERVICENAME" value="SINV.GetBrokerageReportInfo"/>
      <column name="ROOTELEMENT" value="GetBrokerageReportInfoReq"/>
      <column name="MSG_FORMAT" value="JSON"/>
    </insert>
    <insert tableName="ITT_KAFKA_TOPIC">
      <column name="QUEUETYPE" value="OUT"/>
      <column name="TOPIC_NAME" value="ips.document-factory.requests"/>
      <column name="TOPIC_CAPTION" value="BOSS-3575. Интеграция брокерского отчета в мобильное приложение Свои Инвестиции_ответ"/>
      <column name="SYSTEM_NAME" value="SINV"/>
      <column name="SERVICENAME" value="SINV.GetBrokerageReportInfo"/>
      <column name="ROOTELEMENT" value="GetBrokerageReportReq"/>
      <column name="MSG_FORMAT" value="JSON"/>
    </insert>
    <update tableName="ITT_KAFKA_TOPIC">
      <column name="MSG_FORMAT" value="SUBSCR"/>
      <where>QUEUETYPE = 'OUT' AND SERVICENAME = 'SINV.CreateUpdateClientInfo'</where>
    </update>  
  </changeSet>
</databaseChangeLog>