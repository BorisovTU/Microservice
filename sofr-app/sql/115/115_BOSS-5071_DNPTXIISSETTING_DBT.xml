<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="115_BOSS-5071_DNPTXIISSETTING_DBT" author="Farshatov">
    <createTable tableName="DNPTXIISSETTING_DBT" remarks="Шкала для сроков владения ИИС">
      <column name="T_ID" type="number(5)" remarks="ID записи"/>
      <column name="T_TAXPERIOD" type="number(5)" remarks="Год открытия ИИС-3"/>
      <column name="T_IISTYPE" type="number(5)" remarks="Тип ИИС" defaultValueNumeric="0"/>
      <column name="T_MINPERIOD" type="number(5)" remarks="Мин. срок ИИС, лет" defaultValueNumeric="0"/>
      <column name="T_OPER" type="number(5)" remarks="Пользователь" defaultValueNumeric="9999"/>
      <column name="T_RECDATE" type="date" remarks="Дата изменения" defaultValueDate="0001-01-01"/>
    </createTable>

    <createIndex indexName="DNPTXIISSETTING_DBT_IDX0" tableName="DNPTXIISSETTING_DBT" unique="true">
      <column name="T_ID"/>
    </createIndex>

    <createIndex indexName="DNPTXIISSETTING_DBT_IDX1" tableName="DNPTXIISSETTING_DBT" unique="true">
      <column name="T_TAXPERIOD"/>
    </createIndex>

    <createSequence sequenceName="DNPTXIISSETTING_DBT_SEQ" startValue="1" maxValue="999999999999999999999999999" minValue="1" cacheSize="0"/>
  </changeSet>
</databaseChangeLog>
