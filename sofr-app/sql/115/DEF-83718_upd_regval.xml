<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">
  <changeSet id="DEF-83718_upd_regval" author="SennikovIV">
    <update tableName="DREGVAL_DBT">
      <column name="T_FMTBLOBDATA_XXXX" valueComputed="(to_blob(utl_raw.cast_to_raw( '22,31' || chr(0))))" />
      <where> T_KEYID = (select t_keyid 
                             from dregparm_dbt 
                            where t_parentid = (SELECT t_keyid
                                                  from (select p.t_keyid,SYS_CONNECT_BY_PATH(p.t_name, '/') Path
                                                          from dregparm_dbt p
                                                       connect by prior p.t_keyid=p.t_parentid start with p.t_parentid=0)
                                                 where Path='/SECUR/НАЛОГОВЫЙ УЧЕТ')
                                                   and t_name = 'ДАТЫ_ФИКС_ОСТАТКА' )
      </where>
    </update>
  </changeSet>
</databaseChangeLog>