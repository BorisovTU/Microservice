<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-1195-4_create_secur_redemption_link" author="Simanov">
        <createTable tableName="secur_redemption_link" remarks="Линки корп. действий погашения ценных бумаг">

            <column name="link_id" type="number(12)">
                <constraints primaryKey="true" primaryKeyName="pk_sec_red_lnk"/>
            </column>

            <column name="status_id" type="number(5)">
                <constraints foreignKeyName="fk_sec_red_lnk_st" references="secur_redemption_link_statuses(status_id)"/>
            </column>

            <column name="is_limit_locked" type="number(1)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" defaultValueComputed="systimestamp" remarks="Время создания">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="timestamp" defaultValueComputed="systimestamp" remarks="Время изменения">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="secur_redemption_link" indexName="idx_sec_red_lnk_st_id">
            <column name="status_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>