<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="124_AVT_BOSS-1299_create_trade_order_book" author="Mustafaev">
        <createTable tableName="trade_order_book" remarks="Созданные книги">

            <column name="id" type="number(10)" remarks="Идентификатор книги">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="book_date" type="date" remarks="Дата книги">
                <constraints nullable="false"/>
            </column>

            <column name="isin" type="varchar2(20)" remarks="ISIN">
                <constraints nullable="true"/>
            </column>

            <column name="lsin" type="varchar2(20)" remarks="Регистрационный номер бумаги">
                <constraints nullable="true"/>
            </column>

            <column name="issuername" type="varchar2(128)" remarks="Наименование эмитента">
                <constraints nullable="true"/>
            </column>

            <column name="secure_series" type="varchar2(20)" remarks="Серия выпуска">
                <constraints nullable="true"/>
            </column>

            <column name="t_fiid" type="number(10)" remarks="Номер ФИ в СОФР(заполняется если бумага есть в СОФР)">
                <constraints nullable="true"/>
            </column>

            <column name="end_book_date" type="date" remarks="Дата исполнения заявок по книге">
                <constraints nullable="true"/>
            </column>

            <column name="for_qualified_investor" type="boolean" remarks="Признак бумаги для квал.инвестора. TRUE-Доступна для торговли только для квал.инвестора; FALSE-Доступна для торговли для не квал.инвестора">
                <constraints nullable="true"/>
            </column>

            <column name="note" type="varchar2(20)" remarks="Примечание">
                <constraints nullable="true"/>
            </column>






        </createTable>
    </changeSet> 

</databaseChangeLog>                            