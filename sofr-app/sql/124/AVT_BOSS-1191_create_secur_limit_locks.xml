<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-1191_create_secur_limit_locks" author="Simanov">
        <createTable tableName="secur_limit_locks" remarks="Блокировки лимитов по ценным бумагам">

            <column name="lock_id" type="number(10)" remarks="ИД блокировки">
                <constraints primaryKey="true" primaryKeyName="pk_sec_lim_lock"/>
            </column>

            <column name="source_type" type="varchar2(50)" remarks="Тип объекта, породившего запись">
                <constraints nullable="false"/>
            </column>

            <column name="source_id" type="number(12)" remarks="ИД объекта, породившего запись">
                <constraints nullable="false"/>
            </column>

            <column name="fiid" type="number(12)" remarks="ИД финансового инструмента">
                <constraints nullable="false"/>
            </column>

            <column name="market_id" type="number(12)" remarks="ИД биржи"/>

            <column name="contract_id" type="number(12)" remarks="ИД субдоговора"/>

            <column name="quantity" type="number(20, 6)" remarks="Количество бумаг для блокировки"/>

            <column name="start_date" type="date" remarks="Дата начала блокировки"/>

            <column name="end_date" type="date" remarks="Дата конца блокировки"/>

            <column name="created_time" type="timestamp" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>

            <column name="updated_time" type="timestamp" defaultValueComputed="systimestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>


    </changeSet>
</databaseChangeLog>