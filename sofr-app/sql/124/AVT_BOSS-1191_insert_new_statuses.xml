<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-1191_insert_new_statuses" author="Simanov">
        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="10"/>
            <column name="name" value="Spread finalized"/>
            <column name="description" value="Финализирована обработка операции распределения сумм"/>
        </insert>

        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="11"/>
            <column name="name" value="Request to cancel"/>
            <column name="description" value="Получено сообщение об отмене КД"/>
        </insert>

        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="12"/>
            <column name="name" value="Cancel rejected"/>
            <column name="description" value="Отмена отвергнута. Невозможно отменить операцию"/>
        </insert>

        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="13"/>
            <column name="name" value="Limit locks rolled back"/>
            <column name="description" value="Блокировка лимитов отменена"/>
        </insert>

        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="14"/>
            <column name="name" value="Spreaded sums deleted"/>
            <column name="description" value="Распределённые суммы удалены"/>
        </insert>

        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="15"/>
            <column name="name" value="Spread deleted"/>
            <column name="description" value="Операция распределения сумм удалена"/>
        </insert>

        <insert tableName="secur_redemption_statuses">
            <column name="status_id" valueNumeric="16"/>
            <column name="name" value="Limit locks disabled"/>
            <column name="description" value="Блокировка лимитов снята"/>
        </insert>
    </changeSet>
</databaseChangeLog>