<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="AVT_BOSS-1191_create_status_hist_table" author="Simanov">
        <createTable tableName="secur_redemption_status_hist" remarks="История изменения статусов корп. действий погашения ценных бумаг">

            <column name="id" type="number(12)">
                <constraints primaryKey="true" primaryKeyName="pk_sec_red_st_hist"/>
            </column>

            <column name="redemption_id" type="number(12)">
                <constraints nullable="false" foreignKeyName="fk_sec_red_st_hist_red_id" references="secur_redemptions(redemption_id)"/>
            </column>

            <column name="old_status" type="number(5)">
                <constraints foreignKeyName="fk_sec_red_st_hist_old" references="secur_redemption_statuses(status_id)"/>
            </column>

            <column name="new_status" type="number(5)">
                <constraints nullable="false" foreignKeyName="fk_sec_red_st_hist_new" references="secur_redemption_statuses(status_id)"/>
            </column>

            <column name="update_time" type="timestamp" defaultValueComputed="systimestamp" remarks="Время изменения статуса">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="secur_redemption_status_hist" indexName="idx_sec_red_st_hist_red_id">
            <column name="redemption_id"/>
        </createIndex>

        <createIndex tableName="secur_redemption_status_hist" indexName="idx_sec_red_st_hist_old">
            <column name="old_status"/>
        </createIndex>

        <createIndex tableName="secur_redemption_status_hist" indexName="idx_sec_red_st_hist_new">
            <column name="new_status"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>