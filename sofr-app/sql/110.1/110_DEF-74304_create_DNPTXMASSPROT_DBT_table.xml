<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

  <changeSet id="110_DEF-74304_create_DNPTXMASSPROT_DBT_table" context="prod" author="Miroshnichenko">
    <createTable tableName="DNPTXMASSPROT_DBT" remarks="Таблица для генерации данных для протокола массового создания операций НОБ">
      <column name="T_SERIALNO"   type="NUMBER(10)" remarks="Порядковый номер записи">
          <constraints primaryKey="true"/>
      </column>
      <column name="T_CLIENTID"   type="VARCHAR(35)"   remarks="ID СОФР или ID CFT"></column>
      <column name="T_CLIENTCODE" type="VARCHAR(35)"   remarks="Код клиента из карточки клиента, указанного в ДБО"></column>
      <column name="T_CLIENTNAME" type="VARCHAR(320)"  remarks="Наименование из карточки клиента, указанного в ДБО"></column>
      <column name="T_ISS"        type="CHAR(1)"       remarks="Признак договора ИСС"></column>
      <column name="T_NPTXNUMBER" type="VARCHAR(25)"   remarks="Номер операции расчета НОБ"></column>
      <column name="T_COMMENT"    type="VARCHAR(1024)" remarks="Комментарий к обработанной записи"></column>
    </createTable>

    <createIndex indexName="DNPTXMASSPROTTAB_IDX1" tableName="DNPTXMASSPROT_DBT">
      <column name="T_CLIENTID"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>