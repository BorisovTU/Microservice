import "tscalcitogs.mac", "tscalcitogs_of.mac";

/*Показать итоги*/
MACRO TS_ShowItogs( Order:TRecHandler, Req:TRecHandler ):BOOL
  VAR Form;

  var CalcCom = DataCalcCom();
  if( Order.rec.DocKind == TS_DOC_IDDU )
     Form = CItogs_Panel( NULL, Order, Req, false, true, NULL, NULL, NULL, CalcCom );
  else
     Form = CItogs_Panel_OF( NULL, Order, Req, false, true, NULL, NULL, NULL, CalcCom );
  end;

  if( Form )
     return Form.Run();
  end;
  return false;
END;
