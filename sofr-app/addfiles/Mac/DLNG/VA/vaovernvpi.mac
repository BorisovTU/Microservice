macro ПереоценкаНВПИПоДоплатеПриМенеВнебаланс(dl_tick, ВалРасчетов, Дата)
  var stat = 0;
  var PrevDate = date(0,0,0);
  var OverParm;
  var tickfd = VATickFD(dl_tick);
  var РольСчета = FIROLE_FIBARTERDIFF;

  PrevDate = GetPrevOverDate(dl_tick, DATE_OVER_PAY, DATE_BART_SETOFFBALANCE);

  if((PrevDate == date(0,0,0)) or (Дата <= PrevDate))
    return stat; //нечего переоценивать
  end;

  //переоценка обязательств по поставке
  if(not VA_IsBarterW(tickfd.GetTick().DealType))
    OverParm = VAOverParm(NULL, Дата, PrevDate, FIROLE_FICOM);
    VA_ForEachPaym(dl_tick, BAi, @ПереоценкаНВПИОбязательстваПродажаВнебаланс, @OverParm);
  end;

  //переоценка требований по поставке
  if((not stat) and (not VA_IsBarterF(tickfd.GetTick().DealType)))
    OverParm = VAOverParm(NULL, Дата, PrevDate, FIROLE_FIREQ);
    stat = VA_ForEachPaym(dl_tick, CAi, @ПереоценкаНВПИТребованияПокупкаВнебаланс, @OverParm);
  end;

  if(tickfd.GetBartDiffSum() != $0) //Нет доплаты, нечего переоценивать
    //Переоценка доплаты
    OverParm = VAOverParm(ВалРасчетов, Дата, PrevDate, FIROLE_FIBARTERDIFF);
    if(tickfd.IsBartDiffPayerOurBank()) //Доплачивает наш банк (обязательства)
      stat = VA_ForEachPaym(dl_tick, PM_PURP_VSBARTERDIFF, @ПереоценкаНВПИОбязательстваПокупкаВнебаланс, @OverParm);
    else //доплачивает контрагент 
      stat = VA_ForEachPaym(dl_tick, PM_PURP_VSBARTERDIFF, @ПереоценкаНВПИТребованияПродажаВнебаланс, @OverParm);
    end;
  end;

  if(not stat)
    SetOprDate( GetOverDateKindID(dl_tick, DATE_OVER_PAY), date(Дата));  
  end;

  return stat;
end;

macro ПереоценкаНВПИСделки(tick, ObjType, Дата)
  var stat = 0;
  var ВалРасчетов;
  var tickfd = VATickFD(tick);

  if((ObjType == VAOVER_OBJTYPE_BALANCEDEAL)) //переоценка сделки на балансе
    
    if(not VA_GetPayFIID(tick, CAi, @ВалРасчетов)) // получить валюту расчетов
       return VA_Err("Ошибка при получении валюты расчетов");
    end;

    if(VA_IsBuy(tick.DealType)) /* покупка */
       
       stat = ПереоценкаНВПИПоОплатеПриПокупке(tick, ВалРасчетов, Дата, FIROLE_FICOM);
       if(not stat)
         stat = ПереоценкаНВПИПоПоставкеПриПокупке(tick, ВалРасчетов, Дата, FIROLE_FIREQ);
       end;

    elif(VA_IsSale(tick.DealType)) /* Продажа */

       stat = ПереоценкаНВПИПоОплатеПриПродаже(tick, ВалРасчетов, Дата, FIROLE_FIREQ);
       if(not stat)
         stat = ПереоценкаНВПИПоПоставкеПриПродаже(tick, ВалРасчетов, Дата, FIROLE_FICOM);
       end;

    elif(VA_IsExchange(tick.DealType)) //Мена
       //В сделках мены дата доплаты совпадает с датой поставки и доплата не может быть просрочена, поэтому переоценку по НВПИ делать не нужно 
    end;
  elif(ObjType == VAOVER_OBJTYPE_OFFBALANCEDEAL) //переоценка сделки на внебалансе

    if(VA_IsBuy(tick.DealType)) /* покупка */

       if(not VA_GetPayFIID(tick, CAi, @ВалРасчетов)) // получить валюту расчетов
         stat = VA_Err("Ошибка при получении валюты расчетов");
       end;
       if(not stat)
         stat = ПереоценкаНВПИПоОплатеПриПокупкеВнебаланс(tick, ВалРасчетов, Дата, FIROLE_FICOM);
       end;
       if(not stat)
         stat = ПереоценкаНВПИПоПоставкеПриПокупкеВнебаланс(tick, Дата, FIROLE_FIREQ);
       end;

    elif(VA_IsSale(tick.DealType)) /* Продажа */
       if(not VA_GetPayFIID(tick, CAi, @ВалРасчетов)) // получить валюту расчетов
         stat = VA_Err("Ошибка при получении валюты расчетов");
       end;
       if(not stat)
         stat = ПереоценкаНВПИПоОплатеПриПродажеВнебаланс(tick, ВалРасчетов, Дата, FIROLE_FIREQ);
       end;
       if(not stat)
         stat = ПереоценкаНВПИПоПоставкеПриПродажеВнебаланс(tick, Дата, FIROLE_FICOM);
       end;
    elif(VA_IsExchange(tick.DealType)) //Мена
       if(tickfd.GetBartDiffSum() != $0) // Чтобы не ругалось, <ВалРасчетов> нужна не всем
         if(not VA_GetPayFIID(tick, PM_PURP_VSBARTERDIFF, @ВалРасчетов)) // получить валюту расчетов
           stat = VA_Err("Ошибка при получении валюты расчетов");
         end;
       end;
       if(not stat)
         stat = ПереоценкаНВПИПоДоплатеПриМенеВнебаланс(tick, ВалРасчетов, Дата);
       end;
    end;
  end;

  return stat;
end;

