        //т.к. в случае доплаты контрагентом на внебаланс ставили двумя проводками (Sтр и Sд), то и тут общую сумму получим сложением результатов, чтобы не потерять копейку
        if((fd.GetBartDiffSum() != $0) and (not fd.IsBartDiffPayerOurBank())) //доплачивает контрагент
          Sсдву =  VA_Convert(fd.GetBartSum(FIROLE_FIREQ), dl_tick.DealDate, fd.GetBartSumFI(FIROLE_FIREQ), ВалютаУчета)
                 + VA_Convert(fd.GetBartDiffSum(), dl_tick.DealDate, fd.GetBartDiffSumFI(), ВалютаУчета); 
        else
          Sсдву = VA_Convert(fd.GetBartSum(FIROLE_FICOM), dl_tick.DealDate, fd.GetBartSumFI(FIROLE_FICOM), ВалютаУчета);
        end;

        if(not VA_GetAccount(КатегорияСчетаОбязательств, fd, СчетОбязательств, MC_OPENACC_CHECKEXIST, ВалютаУчета, FIROLE_FICOM, AccBuf, Дата))
          stat = 1;
        else
          //остаток на дату снятия с внебаланса
          OprGetAccountRest( AccBuf.rec.Chapter, AccBuf.rec.Code_Currency, AccBuf.rec.Account, Дата, Sоб);

          Сальдо = abs(Sсдву) - abs(Sоб);

          if( Сальдо > 0 )
            Ground = "Списание положительной переоценки по ц/б со счета обязательств";
            stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетОбязательств, Кредит, Сальдо, ВалютаУчета, Дата, FIROLE_CORACC_PASSIVE, Ground);
          elif( Сальдо < 0 )
            Ground = "Списание отрицательной переоценки по ц/б со счета обязательств";
            stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетОбязательств, Дебет, Сальдо, ВалютаУчета, Дата, FIROLE_CORACC_PASSIVE, Ground);
          end;
        end;
      end;

      //2. Списание результатов переоценки НВПИ требований
      if((not stat) and (not VA_IsBarterF(dl_tick.DealType)))
        ВалютаУчета = ПолучитьВУПолучаемыхЦБВМене(dl_tick);
        if(СрочностьСделки == СделкаПрочая)
          КатегорияСчетаТребований = "+Форвард, прочие";
        else
          КатегорияСчетаТребований = "+Форвард, дрейф";
        end;

        //т.к. в случае доплаты нашим банком на внебаланс ставили двумя проводками (Sоб и Sд), то и тут общую сумму получим сложением результатов, чтобы не потерять копейку
        if(fd.IsBartDiffPayerOurBank()) //доплачивает наш банк
          Sсдву =  VA_Convert(fd.GetBartSum(FIROLE_FICOM), dl_tick.DealDate, fd.GetBartSumFI(FIROLE_FICOM), ВалютаУчета)
                 + VA_Convert(fd.GetBartDiffSum(), dl_tick.DealDate, fd.GetBartDiffSumFI(), ВалютаУчета); 
        else
          Sсдву = VA_Convert(fd.GetBartSum(FIROLE_FIREQ), dl_tick.DealDate, fd.GetBartSumFI(FIROLE_FIREQ), ВалютаУчета);
        end;

        if(not VA_GetAccount(КатегорияСчетаТребований, fd, СчетТребований, MC_OPENACC_CHECKEXIST, ВалютаУчета, FIROLE_FIREQ, AccBuf, Дата))
          stat = 1;
        else
          //остаток на дату снятия с внебаланса
          OprGetAccountRest( AccBuf.rec.Chapter, AccBuf.rec.Code_Currency, AccBuf.rec.Account, Дата, Sтр);

          Сальдо = abs(Sсдву) - abs(Sтр);
           
          if( Сальдо > 0 )
            Ground = "Списание положительной переоценки по ц/б со счета требований";
            stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетТребований, Дебет, Сальдо, ВалютаУчета, Дата, FIROLE_CORACC_ACTIVE, Ground);
          elif( Сальдо < 0 )
            Ground = "Списание отрицательной переоценки по ц/б со счета требований";
            stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетТребований, Кредит, Сальдо, ВалютаУчета, Дата, FIROLE_CORACC_ACTIVE, Ground);
          end;
        end;
      end;

      //3. Переоценка НВПИ доплаты
      if(not stat)
        Sсдвр = VA_Convert(fd.GetBartDiffSum(), dl_tick.DealDate, fd.GetBartDiffSumFI(), ВалютаРасчетов);

        //3.1 Доплата нашего банка
        if(fd.IsBartDiffPayerOurBank())
          if(СрочностьСделки == СделкаПрочая)
            КатегорияСчетаОбязательств = "-Форвард, прочие";
          else
            КатегорияСчетаОбязательств = "-Форвард, дрейф";
          end;

          if(not VA_GetAccount(КатегорияСчетаОбязательств, fd, СчетОбязательств, MC_OPENACC_CHECKEXIST, ВалютаРасчетов, FIROLE_FIBARTERDIFF, AccBuf, Дата))
            stat = 1;
          else
            //остаток на дату снятия с внебаланса
            OprGetAccountRest( AccBuf.rec.Chapter, AccBuf.rec.Code_Currency, AccBuf.rec.Account, Дата, Sоб);

            Сальдо = abs(Sсдвр) - abs(Sоб);

            if( Сальдо > 0 )
              Ground = "Списание положительной переоценки по доплате со счета обязательств";
              stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетОбязательств, Кредит, Сальдо, ВалютаРасчетов, Дата, FIROLE_CORACC_PASSIVE, Ground);
            elif( Сальдо < 0 )
              Ground = "Списание отрицательной переоценки по доплате со счета обязательств";
              stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетОбязательств, Дебет, Сальдо, ВалютаРасчетов, Дата, FIROLE_CORACC_PASSIVE, Ground);
            end;
          end;
        else //3.2 Доплата контрагента
          if(СрочностьСделки == СделкаПрочая)
            КатегорияСчетаТребований = "+Форвард, прочие";
          else
            КатегорияСчетаТребований = "+Форвард, дрейф";
          end;

          if(not VA_GetAccount(КатегорияСчетаТребований, fd, СчетТребований, MC_OPENACC_CHECKEXIST, ВалютаРасчетов, FIROLE_FIBARTERDIFF, AccBuf, Дата))
            stat = 1;
          else
            //остаток на дату снятия с внебаланса
            OprGetAccountRest( AccBuf.rec.Chapter, AccBuf.rec.Code_Currency, AccBuf.rec.Account, Дата, Sтр);

            Сальдо = abs(Sсдвр) - abs(Sтр);
             
            if( Сальдо > 0 )
              Ground = "Списание положительной переоценки по доплате со счета требований";
              stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетТребований, Дебет, Сальдо, ВалютаРасчетов, Дата, FIROLE_CORACC_ACTIVE, Ground);
            elif( Сальдо < 0 )
              Ground = "Списание отрицательной переоценки по доплате со счета требований";
              stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетТребований, Кредит, Сальдо, ВалютаРасчетов, Дата, FIROLE_CORACC_ACTIVE, Ground);
            end;
          end;
        end;
      end;
    end;
  end;

  return stat;
END; 


PRIVATE MACRO GetOverDateKindID(tick, overdatetype)
  var DataSet, Select;
  var DateKindID = 0;

  Select = DL_RSDCommand("select t_DateKindID from doprkdate_dbt where t_DocKind = ? and t_NumberDate = ? ");

  Select.AddParam(tick.BofficeKind);
  Select.AddParam(overdatetype);

  DataSet = Select.execute();

  if(DataSet.moveNext())
    DateKindID = DataSet.DateKindID;
  end;

  return DateKindID;
END;

