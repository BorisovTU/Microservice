PRIVATE MACRO GetPrevOverDate(tick, overdatetype, datetype)
  var PrevDate = date(0,0,0), PrevOverDate = date(0,0,0);
  var SupplyDate, PayDate;

  GetOprDate( overdatetype, @PrevOverDate, tick.BofficeKind, String(tick.DealID:34:o));
  if(ValType(datetype) != V_UNDEF)
    GetOprDate( datetype,     @PrevDate,     tick.BofficeKind, String(tick.DealID:34:o));
  end;

  if(PrevDate > PrevOverDate)
    return PrevDate;
  end;   

  return PrevOverDate;
END;


macro VA_IsPaymentWasOverdue( PaymStatus, PaymentID )
  var cmd, rsd;

   if( (PaymStatus == PM_REMOVE_OVERDUE) OR 
       (PaymStatus == PM_OVERDUE) )
      return true;
   end;

   cmd = RsdCommand(RslDefCon, "select count(1) Stat from dpmhist_dbt where t_PaymentID = ? and t_StatusIDto = ?" );
   cmd.addParam("", RSDBP_IN, PaymentID);
   cmd.addParam("", RSDBP_IN, PM_OVERDUE);
   cmd.execute();

   rsd = TRsbDataSet(cmd);

   if( rsd.MoveNext() ) 
      if( rsd.rec.Stat > 0 )
         return true;
      end;
   end;

   return false;

end;


MACRO ПолучитьСуммыПереоценки(bnr, leg, tick, numOrd, lnk, OverGroupSumm:@VAGroupCurr)
  var ВалютаЦены = lnk.rec.BCCFI;
  
  if((bnr.rec.FIID == OverGroupSumm.BnrFIID))
    OverGroupSumm.add(ВалютаЦены, lnk.rec.BCCost);
  end;

  return 0;
END;

MACRO ПолучитьСуммыПереоценкиВнебаланс(bnr, leg, tick, numOrd, lnk, OverGroupSumm:@VAGroupCurr)
  var ВалютаЦены = lnk.rec.BCCFI;
  var ВалютаНоминала = leg.rec.PFI;
  var bnrfd = VSBannerFD(DL_VSBANNER, bnr.rec.BCID);
  var ВалютаУчета = bnrfd.ОпределитьВалютуУчета();
  var СуммаВН = $0; 
  var SummaOnReg = $0, SummaOnToday = $0;
  var R = $0;
  
  if((bnr.rec.FIID == OverGroupSumm.BnrFIID) and (ВалютаУчета != ВалютаНоминала))
    //сумма Т/О в ВН (т.е. сумма сделки в ВЦ (из условий сделки), переведенная в ВН по курсу), переведенная в ВУ по курсу 
    СуммаВН    = VA_Convert(lnk.rec.BCCost, OverGroupSumm.PrevDate, ВалютаЦены, ВалютаНоминала);
    SummaOnReg = VA_Convert(СуммаВН, OverGroupSumm.PrevDate, ВалютаНоминала, ВалютаУчета);

    SummaOnToday = VA_Convert(СуммаВН, OverGroupSumm.Дата, ВалютаНоминала, ВалютаУчета);

    R = SummaOnReg - SummaOnToday;

    if(R != $0)
      OverGroupSumm.add(ВалютаУчета, R);
    end;
  end;

  return 0;
END;

//переоценка по оплате в покупке
MACRO  ПереоценкаНВПИОбязательстваПокупка(dl_tick, paymC, OverParm:VAOverParm)
  
  var Sто_учт = $0,   
      Sто_тек = $0, 
      R,
      Ok = false,
      pm_obj,
      СчетДляПереоценки = "", ВалЦены,
      stat = 0;
  var fd;
  var Ground = "";

  if(paymC.rec.PaymStatus == PM_FINISHED) //Переоценке подлежат только не исполненные требования/обязательства
    return stat;
  end;

  if((fd = VATickFD(dl_tick)) == null)
     stat = VA_Err("Ошибка при определении первичного документа сделки");
     return (stat == 0);
  end;

  //платеж по контрактиву
  pm_obj = RsbPayment( paymC.rec.PaymentID );

  ВалЦены = pm_obj.OrderFIID;

  //ограничение: счета требований\обязательств банка по оплате переоцениваются по НВПИ только в случае, если ВЦ - ин. валюта, а ВР - рубли
  if((ВалЦены != OverParm.ВалРасчетов) and (OverParm.ВалРасчетов == NATCUR) )

    Sто_учт = VA_Convert(pm_obj.OrderAmount, OverParm.PrevDate, ВалЦены, OverParm.ВалРасчетов);
    Sто_тек = VA_Convert(pm_obj.OrderAmount, OverParm.Дата,     ВалЦены, OverParm.ВалРасчетов);
    
    if(Sто_учт == Sто_тек)
      /* нет суммовой разницы */
      return stat;
    else
      R = Sто_учт - Sто_тек;
    end;

    if(VA_IsPaymentWasOverdue(paymC.rec.PaymStatus, paymC.rec.PaymentID))
       if(not VA_GetAccount("Обяз. с н.с.", fd, СчетДляПереоценки, MC_OPENACC_CREATE, OverParm.ВалРасчетов, OverParm.РольСчета, null, OverParm.Дата))
         stat = 1;
       end;
    else
       if(not VA_GetAccount("-Форвард, расчеты", fd, СчетДляПереоценки, MC_OPENACC_CREATE, OverParm.ВалРасчетов, OverParm.РольСчета, null, OverParm.Дата))
         stat = 1;
       end;
    end;
    
    if( (not stat) and (СчетДляПереоценки) )
      Ground = "Учет суммовой разницы от применения НВПИ по оплате сделки "+dl_tick.DealCode+" для суммы "+pm_obj.OrderAmount+" "+VA_GetFI_ISO_Code(ВалЦены);

      if( R > 0 )
        stat = УВ_ВыполнитьПереоценкуНВПИ(fd, СчетДляПереоценки, Дебет, R, OverParm.ВалРасчетов, OverParm.Дата, Ground);
      elif( R < 0 )
        stat = УВ_ВыполнитьПереоценкуНВПИ(fd, СчетДляПереоценки, Кредит, R, OverParm.ВалРасчетов, OverParm.Дата, Ground);
      end;
    end;
  end;

  return stat;
END;

//переоценка по оплате в покупке, находящейся на внебалансе
MACRO  ПереоценкаНВПИОбязательстваПокупкаВнебаланс(dl_tick, paymC, OverParm:VAOverParm)
  
  var Sвто_учт = $0,  
      Sвто_тек = $0,  
      Rвно,
      Ok = false,
      pm_obj,
      СчетДляПереоценки = "", ВалЦены, СрочностьСделки,
      stat = 0;
  var fd;
  var Ground = "";

  //платеж по оплате
  pm_obj = RsbPayment( paymC.rec.PaymentID );

  ВалЦены = pm_obj.OrderFIID;

  //ограничение: счета требований\обязательств банка по оплате переоцениваются по НВПИ только в случае, если ВЦ - ин. валюта, а ВР - рубли
  if((ВалЦены != OverParm.ВалРасчетов) and (OverParm.ВалРасчетов == NATCUR))

    if((fd = VATickFD(dl_tick)) == null)
      stat = VA_Err("Ошибка при определении первичного документа сделки");
      return (stat == 0);
    end;

    СрочностьСделки = fd.GetUrgencyType();

    Sвто_учт = VA_Convert(pm_obj.OrderAmount, OverParm.PrevDate, ВалЦены, OverParm.ВалРасчетов);
    Sвто_тек = VA_Convert(pm_obj.OrderAmount, OverParm.Дата,     ВалЦены, OverParm.ВалРасчетов);
    
    if(Sвто_учт == Sвто_тек)
      /* нет суммовой разницы */
      return stat;
    else
      Rвно = Sвто_учт - Sвто_тек;
    end;
    
    if(СрочностьСделки == СделкаПрочая)
      if(not VA_GetAccount("-Форвард, прочие", fd, СчетДляПереоценки, MC_OPENACC_CREATE, OverParm.ВалРасчетов, OverParm.РольСчета, null, OverParm.Дата))
        stat = 1;
      end;
    elif(СрочностьСделки == СделкаНеРанееТретьегоДня)
      if(not VA_GetAccount("-Форвард, дрейф", fd, СчетДляПереоценки, MC_OPENACC_CHECKEXIST, OverParm.ВалРасчетов, OverParm.РольСчета, null, OverParm.Дата))
        stat = 1;
      end;
    end;

    if( (not stat) and (СчетДляПереоценки) )
      Ground = "Учет суммовой разницы от применения НВПИ по оплате сделки "+dl_tick.DealCode+" для суммы "+pm_obj.OrderAmount+" "+VA_GetFI_ISO_Code(ВалЦены);
      if( Rвно > 0 )
        stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетДляПереоценки, Дебет, Rвно, OverParm.ВалРасчетов, OverParm.Дата, FIROLE_OVERVALUE_COM, Ground);
      elif( Rвно < 0 )
        stat = УВ_ВыполнитьПереоценкуНВПИВнебаланс(fd, СчетДляПереоценки, Кредит, Rвно, OverParm.ВалРасчетов, OverParm.Дата, FIROLE_OVERVALUE_COM, Ground);
      end;
    end;
  end;

  return stat;
END;


//переоценка по поставке в покупке 
MACRO ПереоценкаНВПИТребованияПокупка(dl_tick, paymB, OverParm:VAOverParm)

  var paymC = TBfile("pmpaym.dbt");
  var Sто_учт = $0,
      Sто_тек = $0,
      Summa = $0,
      Ok = false,
      pm_obj,
      СчетДляПереоценки = "",
      stat = 0;
  var fd, tick;
  var OverGroupSumm;
  var Ground = "";
  var i = 0;
  var ВалютаЦены;

  if(paymB.rec.PaymStatus == PM_FINISHED) //Переоценке подлежат только не исполненные требования/обязательства
    return stat;
  end;

  if((fd = VATickFD(dl_tick)) == null)
     stat = VA_Err("Ошибка при определении первичного документа сделки");
     return (stat == 0);
  end;

  tick = fd.GetTick();

  //т.к. все платежи по оплате исполняются одновременно, то достаточно проверить первый попавшийся
  if(VA_Get1stPlanPaym(tick.BofficeKind, tick.DealID, CAi, paymC))
     if( paymC.rec.ValueDate == date(0,0,0) )
        MsgBox("Не указана плановая дата платежа.");
        return 1;
     end;
  end;

  if((paymC.rec.PaymStatus != PM_FINISHED) OR (OverParm.Дата == paymC.rec.ValueDate)) //Оплата ещё не исполнена или в дату оплаты

    OverGroupSumm = VAGroupCurr(OverParm.Дата, OverParm.PrevDate, paymB.rec.OrderFIID);

    stat = VA_ForEachBanner(dl_tick, @ПолучитьСуммыПереоценки, VSORDLNK_K_BUY, @OverGroupSumm);

    if(not stat)

      while(i < OverGroupSumm.Param.size())
        ВалютаЦены = OverGroupSumm.Param[i].Валюта;

        Sто_учт = VA_Convert(OverGroupSumm.Param[i].R, OverParm.PrevDate, ВалютаЦены, OverParm.ВалРасчетов);
        Sто_тек = VA_Convert(OverGroupSumm.Param[i].R, OverParm.Дата,     ВалютаЦены, OverParm.ВалРасчетов); 
        
        Summa = Sто_учт - Sто_тек;

        if(Summa != $0)
          if(not VA_IsPaymentWasOverdue(paymB.rec.PaymStatus, paymB.rec.PaymentID))    //поставка не просрочена
            if(not VA_GetAccount("+Форвард, расчеты", fd, СчетДляПереоценки, MC_OPENACC_CREATE, OverParm.ВалРасчетов, OverParm.РольСчета, null, OverParm.Дата))
              stat = 1;
            end;
          else
            if(not VA_GetAccount("Треб. с н.с.", fd, СчетДляПереоценки, MC_OPENACC_CREATE, OverParm.ВалРасчетов, OverParm.РольСчета, null, OverParm.Дата))
              stat = 1;
            end;
          end;

          if( (not stat) and (СчетДляПереоценки) )
            Ground = "Учет суммовой разницы от применения НВПИ по поставке сделки "+dl_tick.DealCode+" для суммы "+OverGroupSumm.Param[i].R+" "+VA_GetFI_ISO_Code(ВалютаЦены);
            if( Summa > 0 )
              stat = УВ_ВыполнитьПереоценкуНВПИ(fd, СчетДляПереоценки, Кредит, Summa, OverParm.ВалРасчетов, OverParm.Дата, Ground);
            elif( Summa < 0 )
              stat = УВ_ВыполнитьПереоценкуНВПИ(fd, СчетДляПереоценки, Дебет, Summa, OverParm.ВалРасчетов, OverParm.Дата, Ground);
            end;
          end;
        end;

        i = i + 1;
      end;
    end;
  end;
   
  return stat;

END;

//переоценка по поставке в покупке на внебалансе
MACRO ПереоценкаНВПИТребованияПокупкаВнебаланс(dl_tick, paymB, OverParm:VAOverParm)

  var Rвнп,
      СчетДляПереоценки = "", СрочностьСделки, ВалютаУчета, 
      stat = 0;
  var fd, tick;
  var OverGroupSumm;
  var i = 0;
  var Ground;

  if(paymB.rec.PaymStatus == PM_FINISHED) //Переоценке подлежат только не исполненные требования/обязательства
    return stat;
  end;

  if((fd = VATickFD(dl_tick)) == null)
     stat = VA_Err("Ошибка при определении первичного документа сделки");
     return (stat == 0);
  end;

  OverGroupSumm = VAGroupCurr(OverParm.Дата, OverParm.PrevDate, paymB.rec.OrderFIID);
 
  //выполняем группировку ц/б по валютам
  stat = VA_ForEachBanner(dl_tick, @ПолучитьСуммыПереоценкиВнебаланс, VSORDLNK_K_BUY, @OverGroupSumm);

  if(not stat)

    СрочностьСделки = fd.GetUrgencyType();

    while(i < OverGroupSumm.Param.size())

      ВалютаУчета = OverGroupSumm.Param[i].Валюта;
      Rвнп        = OverGroupSumm.Param[i].R;

      if(СрочностьСделки == СделкаПрочая)
        if(not VA_GetAccount("+Форвард, прочие", fd, СчетДляПереоценки, MC_OPENACC_CREATE, ВалютаУчета, OverParm.РольСчета, null, OverParm.Дата))
          stat = 1;
        end;
      elif(СрочностьСделки == СделкаНеРанееТретьегоДня)
        if(not VA_GetAccount("+Форвард, дрейф", fd, СчетДляПереоценки, MC_OPENACC_CREATE, ВалютаУчета, OverParm.РольСчета, null, OverParm.Дата))
          stat = 1;
        end;
      end;

      if( (not stat) and (СчетДляПереоценки) )
        Ground = "Учет суммовой разницы от применения НВПИ по поставке сделки "+dl_tick.DealCode;
        if( Rвнп > 0 )
