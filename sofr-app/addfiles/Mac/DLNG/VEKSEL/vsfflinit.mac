/*
$Name:         vsfflinit.mac
$Module:       Векселя банка
$Description:  Инициализация операции
*/


import  vslib, oralib;

PRIVATE record order( vsfrmord );

MACRO InitOperation( KindOp, KindDoc, primdoc )

  setbuff( order, primdoc );

  if( order.Department != VS_GetHeadDepartment() )
    MsgBox("Данная операция предназначена только для (Ф)ГО банка");
    return 1;
  end; 

  return 0;
END;
