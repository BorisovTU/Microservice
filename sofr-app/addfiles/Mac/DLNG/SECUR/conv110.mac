/* Операция конвертации ц/б. 
   Шаг проверки режима списания*/
import InsCarryDoc, "sp_class.mac", "sp_car.mac";

macro ExecuteCaseStep( Kind_Operation, Number_Step, FDoc, KindDoc)

  record deal(dl_tick);       
  var    FD; 

  SetBuff( deal, FDoc );
  FD = SPFirstDoc( deal);

  if( FD.GetModeWriteOff( true ) != "X" ) /* "X" - online, "" - offline */
     /*работаем в offline*/
     return "115"; /*закрытие в режиме offline*/
  end;

  return "200"; /*закрытие в режиме online*/
end;
