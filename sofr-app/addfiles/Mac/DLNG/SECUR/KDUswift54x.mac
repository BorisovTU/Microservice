  /* Получить значение из dnamealg_dbt*/
private macro name_alg(Type, Number)
    var cmd, dataSet;
    cmd = DL_RSDCommand("SELECT t_szNameAlg as Name FROM dnamealg_dbt WHERE t_iTypeAlg = ? AND t_iNumberAlg = ?");

    cmd.addParam(Type);
    cmd.addParam(Number);
    dataSet = cmd.execute();

    if (dataSet.moveNext())
      return dataSet.Name;
    else
      return "";
    end;

end;

