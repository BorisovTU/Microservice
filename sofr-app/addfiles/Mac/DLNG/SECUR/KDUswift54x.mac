private macro GetDealType( DealID )
  var query, DataSet, cmd, RetVal;
  query = "select rsb_secur.IsBuy(rsb_secur.get_OperationGroup(rsb_secur.get_OperSysTypes(tk.t_DealType, tk.t_BofficeKind))) as DealType from DDL_TICK_DBT tk where tk.t_dealid = ?";
  cmd = DL_RSDCommand(query);
  cmd.AddParam(DealID);
  DataSet = cmd.Execute();
  if( DataSet.moveNext() )
     RetVal = DataSet.DealType;
  end;
  return RetVal;
end;

private macro GetPartyID( ID )
  var query, DataSet, cmd, RetVal;
  query = "SELECT q.t_storageid as PartyID FROM DSCQRACC_DBT q WHERE q.t_qrid = ?";
  cmd = DL_RSDCommand(query);
  cmd.AddParam(ID);
  DataSet = cmd.Execute();
  if( DataSet.moveNext() )
     RetVal = DataSet.PartyID;
  end;
  return RetVal;
end;

private macro GetDEPOACC( ID, DepoAcc:@variant, DepoPart:@variant)
  var query, DataSet, cmd, RetVal;
  query = "SELECT q.t_depoacccode, q.t_depopartcode FROM DSCQRACC_DBT q WHERE q.t_qrid = ?";
  cmd = DL_RSDCommand(query);
  cmd.AddParam(ID);
  DataSet = cmd.Execute();
  if( DataSet.moveNext() )
     DepoAcc = DataSet.t_depoacccode;
     DepoPart = DataSet.t_depopartcode;
  end;
  return RetVal;
end;

private macro FillPartyShort( PartyID, PartyCodeKind, PartyCode:@variant, PartyName:@variant )
  record party(party);

  if( PartyCode != NULL )
    PartyCode = ПолучитьКодСубъекта(PartyID, PartyCodeKind);
  end;
  if( ПолучитьСубъекта(PartyID, party) == 0 )
    PartyName = party.ShortName;
  else
    PartyName = "";
  end;
end;
