/* формирование исходящего инф. сообщения на шаге операции */
macro DL_CreateMsgInfKDU( comm )
  var err = 0, KindMsg, Select, Transport, ErrText, form, stat, AttrID = 0;
  var ReportFileName, errcode;
  FILE ReportOutFile() txt write; /*файл вывода*/

  var err_rv;
  

  GetRegistryValue( "SECUR\\NRD_CODE", V_STRING, NRDCode, err_rv );
  if (not err_rv)
    NRDCode = ПолучитьКодСубъекта(NRDCode, PTCK_CLIENT);
  end;

  var DepSet_1 = TBFile( "scqracc.dbt");//, "R", 0 );
  var DepSet_2 = TBFile( "scqracc.dbt");//, "R", 0 );
    DepSet_1.Clear();
    DepSet_2.Clear();
    DepSet_1.rec.QRID = comm.rec.DEPSETID;
    DepSet_2.rec.QRID = comm.rec.DEPSETID_2;
    if((DepSet_1.GetEQ()) and (DepSet_2.GetEQ()))
      syde_1 = DepSet_1.rec.StorageID;
      syde_2 = DepSet_2.rec.StorageID;
    end;

     if(syde_1 == NRDCode)
        KindMsg = "MT540";
     else
        KindMsg = "MT542";
     end;
  
  if( MsgBoxEx("Вы хотите формировать " + KindMsg + "?", MB_YES + MB_NO, IND_YES) == IND_YES )
     ReportFileName = GetTxtFileName(comm.rec.documentid + "_" + KindMsg);

     if( Open(ReportOutFile, ReportFileName) == false )
        errcode = status(errtext);
        MsgBox("Ошибка при открытии файла |"+ ReportFileName +"|(" + errcode + ") " + errtext);
        return 1;
     end;

     SetOutput(ReportFileName);
     message("Печать...");
     println(PreparePaymentsMessage(comm, KindMsg, {Oper}, {NumDprt}, @ErrText));
     GetMsgText(comm.rec.documentid, "GETMSGTEXT", iif(KindMsg=="MT540",9,8));
     SetOutput(NULL, true);
     close(ReportOutFile);
     ViewFile(ReportOutFile);
  end;
  return err;
end;
