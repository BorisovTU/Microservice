/*
$Name: ul_log.mac
$Module: Универсальный загрузчик
$Description: Лог
*/

CLASS UL_Log()
  PRIVATE VAR
      LOG = TArray();

  MACRO ClearLog()
      LOG.size = 0;
  END;

  MACRO ErrorLog(_err)
      LOG[LOG.size] = _err;
  END;

  MACRO GetLog()
      return LOG;
  END;

  MACRO SaveLog(_log_func)
      if (strlen(_log_func) > 0)
          ExecMacro2(_log_func, this);
      end;
  END;
END;