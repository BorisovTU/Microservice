import ReplInter;

macro addOverlays
    
  addOverlay( "sbbank.def", "pay_doc.n36", true );
  addOverlay( "sbbank.def", "pay_doc.n40", true );
end;

macro setOverlays( addr, size )

  record pd( pay_doc );

  setBuff( pd, addr );

  if ( pd.GroupOpert == 11 )
    if ( pd.NumOpert == 36 )
      setOverlay( "pay_doc.n36" );
    elif ( pd.NumOpert == 40 )
      setOverlay( "pay_doc.n40" );
    end;
  end;
end;