import "sbcrdnum.mac";

macro ОбработкаШаблона(buff, Template)
   SetBuff(С_Портфель, buff);

   if (С_Портфель.CreditTypeID_Ref == 0)
      MsgBox("Не задан вид кредита");
      return;
   end;

   if (С_Портфель.BeginDate == date(0,0,0))
      MsgBox("Не задана дата регистрации");
      return;
   end;

   С_Портфель.UserNumber = СтрокаПоШаблону(Template, LO_CASE);
end;