str(10)  = "";
str(11) = "      " + {Name_Bank} + "предлагает уплатить просроченные платежи по договору гарантии № " +obj.UsCreditNumber;
str(12) = " от" + obj.RegDate;
str(13) = "";
str(14) = "";
str(15)  = "┌───────────────────────────────────────────────────────┬────────────┬────────────────────┬───────────┐";
str(16)  = "│                                                       │            │                    │           │";
str(17)  = "│                  Вид задолженности                    │Дата расчета│ Сумма к оплате,"+ obj.CurCodeName + " │Дата оплаты│";
str(18)  = "│                                                       │            │                    │           │";
str(19)  = "├───────────────────────────────────────────────────────┼────────────┼────────────────────┼───────────┤";
end;

Macro PrintBody(obj)
var Sadol  :string,
    caldate:string,
    sum    :string,
    paydate:string;

if (obj.Суммы)
   while (obj.rsadv_sum.MoveNext())
         Sadol   = УвеличитьДлину(obj.rsadv_sum.Value("t_dutystagename", NULL, V_String), 55);
         Caldate = УвеличитьДлину(String(obj.rsadv_sum.Value("t_calcbegdate",NULL, V_Date)), 12);
         Sum     = УвеличитьДлину(String(obj.rsadv_sum.Value("t_sum", NULL, V_Money)), 20);
         paydate = УвеличитьДлину(String(obj.rsadv_sum.Value("t_paydate", NULL, V_Date)), 11);

         str(19 + i) = "│" +                   Sadol +                         "│"+caldate+ "│" +      Sum     + "│"+paydate+"│";
         i = i + 1;
         str(19 + i) = "├───────────────────────────────────────────────────────┼────────────┼────────────────────┼───────────┤";
         i = i + 1;
   end;
end;
end;

private macro PrintLegs(obj, fio, post)
var Итого:string;
Итого = УвеличитьДлину(String(obj.Итого), 20);
str(19 + i)  = "│Итого                                                  │            │"       + Итого  + "│           │";
i = i + 1;
str(19 + i)  = "└───────────────────────────────────────────────────────┴────────────┴────────────────────┴───────────┘";
i = i + 1;
str(19 + i)  = "    Предупреждаем, что в случае непогашения Вами указанных платежей, будут приняты меры принудительного ";
i = i + 1;
str(19 + i)  = " взыскания в установленном порядке с отнесением на Ваш счет судебных издержек.";
i = i + 1;
str (19 + i) = "";
i = i + 1;
str (19 + i) = УвеличитьДлину(String(post), 90) + УвеличитьДлину(String(fio), 60);
end;

macro PrintLoansReport(_AdviceBuf, _FIO, _Post)
var obj;
file  prnoper() txt append;
var  indexxx:integer;
var namefile= "", fname = "";
var UsCreditNumber= "";
      SetBuff(AdviceBuf, _AdviceBuf);
      obj = LoansNotify(AdviceBuf);
      PrinHead(obj);
      PrintBody(obj);
      PrintLegs(obj, _FIO, _Post);

      if ({GROUP_MODE})
         fname = "Notify";

         NameFile = workpath + "\\" + fname + "_" + String(AdviceBuf.AdviceID) + ".txt";
         if (NOT Open(prnoper, NameFile))
            return 1;
         end
      end;

      indexxx = 0;
      while(indexxx <= (19 + i))
         if({GROUP_MODE})
           Insert(prnoper, str(indexxx));
         else
           [ #] (str(indexxx));
         end;
         indexxx = indexxx + 1;
      end;

      CRSDCommand ("UPDATE DADVICE_DBT SET T_PATHPRINTFORM = ? "
					" WHERE T_ADVICEID = ? ",
					"ppf", fname + "_" + String(AdviceBuf.AdviceID) + ".txt",
					"aid", AdviceBuf.AdviceID,
					V_GENOBJ);

      if({GROUP_MODE})
         Close(prnoper);
      end;

      return 0;
end;