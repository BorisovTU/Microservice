private macro УвеличитьДлину(str, len)
var spacestr: string = " ";
    while (strlen(str) < len)
          str = str + spacestr;
    end;
    return str;
end;

MACRO PrinHead(obj)

str(0)  = "Реквизиты банка:                                                            Реквизиты заемщика:";
