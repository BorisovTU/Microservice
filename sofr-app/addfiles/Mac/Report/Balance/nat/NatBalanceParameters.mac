end;

//инициализация
macro initParameters()
    var i = 0;
    var parmArray = TArray();

    if (parmCount() == 0)
        throw(TWrongParametersCountException(natBalanceParameters));
    end;

    while (i < parmCount())
        getParm(i, parmArray[i]);
        i = i + 1;
    end;

    m_parameters = TNatBalanceParameters(parmArray);
end;
