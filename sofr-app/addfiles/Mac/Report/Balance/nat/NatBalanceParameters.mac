    end;

    macro getIsExcludeOcp() : Bool
        return m_isExcludeOcp;
    end;

    macro getIsPrintEveryDay() : Bool
        return m_isPrintEveryDay;
    end;

    macro getIsNeedPlainText() : Bool
        return m_isNeedPlainText;
    end;

    macro getIsNeedExcelText() : Bool
