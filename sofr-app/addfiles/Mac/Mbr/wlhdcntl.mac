import "wldoc.mac";

const Ошибка   = 0,
      Первый   = 1,
      Последний= 2;

MACRO Печать_ОтчетСканирования( Вызов, firstdoc, Статус, Сообщение )
  var stat, Номер;

  setbuff (wlhead, firstdoc);

  if( Вызов == Первый )
    [                                                                               ];   
    [   Отчет о групповом контроле начальных выписок (уведомлений)                  ];
    [   Дата обработки: ##########  ########                                        ](date:f, time);
    [   Операционист:   #####                                                       ]({oper});
    [                                                                               ];
    [+-----------------------------+------+------------------------------------------------------------+];
    [|         Номер               |Номер |                 Сообщение                                  |];
    [|   учетного объекта          |ошибки|                                                            |];
    [+-----------------------------+------+------------------------------------------------------------+];
  elif( Вызов == Ошибка )
    if( Статус == 0 )
      if ( wlhead.Kind==1 )
         Сообщение = "Контроль выписки выполнен успешно";
      else
         Сообщение = "Контроль уведомления выполнен успешно";
      end;
    end;    
    [|#############################|######|############################################################|](wlhead.number,Статус,StrSubst(Сообщение, "|", " " ):w);
  elif (Вызов==Последний)
    [+-----------------------------+------+------------------------------------------------------------+];
  end;
end;