import PaymInter, "globals.mac", "wldoc.mac";

const Ошибка      = 0,
      Первый      = 1,
      Последний   = 2;

MACRO Печать_ОтчетСканирования( Вызов, firstdoc, Статус, Сообщение)
  var str;

  SetBuff( wlinfo, firstdoc );

  if( Вызов == Первый )
    [                                                                               ];
    [   Отчет о групповой печати информационных сообщений                           ];
    [   Дата обработки: ##########  ########                                        ](date:f, time);
    [   Операционист:   #####                                                       ]({oper});
    [                                                                               ];
    [+---------+------+------------------------------------------------------------+];
    [|  Номер  |Номер |                 Сообщение                                  |];
    [|документа|ошибки|                                                            |];
    [+---------+------+------------------------------------------------------------+];
  elif( Вызов == Ошибка )
    if( Статус == 0 )
      Сообщение = "Печать документа выполена успешно";
    end;    
    
    [|#########|######|############################################################|](wlinfo.TRN,Статус,Сообщение);
  elif (Вызов==Последний)
    [+---------+------+------------------------------------------------------------+];
  end;
end;