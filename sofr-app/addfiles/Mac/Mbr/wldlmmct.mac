import "wldoc.mac";

const Ошибка   = 0,
      Первый   = 1,
      Последний= 2;

MACRO Печать_ОтчетСканирования( Вызов, firstdoc, Статус, Сообщение )
  var stat, Номер;

  setbuff (wldlmm, firstdoc);

  if( Вызов == Первый )
    [                                                                               ];
    [   Отчет о групповом контроле начальных подтверждений МБК                      ];
    [   Дата обработки: ##########  ########                                        ](date:f, time);
    [   Операционист:   #####                                                       ]({oper});
    [                                                                               ];
    [+-----------------------------+------+------------------------------------------------------------+];
    [|          Номер              |Номер |                 Сообщение                                  |];
    [|     подтверждения           |ошибки|                                                            |];
    [+-----------------------------+------+------------------------------------------------------------+];
  elif( Вызов == Ошибка )
    if( Статус == 0 )
      Сообщение = "Контроль подтверждения МБК выполнен успешно";
    end;    
    [|#############################|######|############################################################|](wldlmm.DealCode,Статус,StrSubst(Сообщение, "|", " " ):w);
  elif (Вызов==Последний)
    [+-----------------------------+------+------------------------------------------------------------+];
  end;
end;