/* Платежная инструкция "Требование о безакцептном списании" */
class FinancialMarketsDirectDebitMessage
 var
  TRF              :string,      /* Ссылка на операцию */
  RelatedRef       :string,      /* Ссылка на сообщение или сделку */
  ValueDate        :date,        /* Дата валютирования */
  Currency         :string,      /* Код валюты */
  Sum              :moneyl,      /* Сумма перевода */
  Credit           :bool,        /* Признак дебета/кредита */
  Trans            :bool,        /* Признак транзитного */
  OrdBank          :Bank,        /* Банк Приказодатель */
  Sender           :Bank,        /* Отправитель */
  AccBank          :Bank,        /* Банк-держатель счета */
  BnfBank          :Bank,        /* Банк Бенефициар */
  RcvInfo          :TRcvInfo100; /* Информация Получателю */

  TRF              = "";
  ValueDate        = date(0,0,0);
  Currency         = "";
  Sum              = $0;
  Credit           = false;
  Trans            = false;
end; /* class FinancialMarketsDirectDebitMessage */

var MT204S : FinancialMarketsDirectDebitMessage;

/* Найти подразделение в нашей территориальной структуре по счету */
private macro IsValAccountInTS( account:string ) :integer
  var select:string = " select dp.t_PartyID                   "
                    + " from daccount_dbt acc, ddp_dep_dbt dp "
                    + " where acc.t_department = dp.t_code    " 
                    + " And acc.t_account = :account          ";

  var params:TArray = makeArray(SQLParam( "account" , account ));
  var rs:object;

  rs  = execSQLselect( select, params, TRUE );
  if(rs and rs.moveNext())
     return rs.value(0);
  else
     return -1;
  end;  
end;

