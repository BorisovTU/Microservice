/**************************************************************************\
|                          Последний день месяца                           |
\**************************************************************************/
macro LastDayInMonth (Month, Year)

  var OutputDay;
  var LastDateInMonth;
  var m,y;

  m = Month + 1;
  y = Year;
  if (m > 12)
    m = 1;
    y = y + 1;
  end;

  LastDateInMonth = Date(1,m,y) - 1;
  DateSplit(LastDateInMonth,OutputDay,NULL,NULL);

  return OutputDay;

end;


