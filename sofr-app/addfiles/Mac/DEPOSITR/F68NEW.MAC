macro WorkWithStatForBalAccAndIdentChar

  var stat = true;          
  var mustDropFilter = false;

  if ( DlgCodCur >= 0 )
    stat = FindCurrency( DlgCodCur );
  else
    if ( FlagCur )
      currency.rec.Code_Currency = 1;
      currency.addFilter( "t.t_CrDifrRate != chr( 0 )" );
      mustDropFilter = true;
      stat = currency.GetGE;
    else
      currency.Code_Currency = 0;
      stat = currency.GetEQ;
    end;
  end;

  while ( stat )
    if ( currency.rec.CrDifrRate != "" )

      /* Вывод отчета в выходной файл */
