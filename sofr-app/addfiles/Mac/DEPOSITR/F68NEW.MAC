macro InputDate

  var stat = TRUE;

  if ( {BatchMode} )
    return stat;
  end;

  if (NOT RunDialog(InputPanel,"WorkDialog"))
    [ ];
    [ Отказались от выпуска формы 68 по учреждению банка];
