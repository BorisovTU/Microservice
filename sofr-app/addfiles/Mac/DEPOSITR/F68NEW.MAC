    if ( ( DlgCodCur >= 0 ) OR ( FlagCur == 0 ) )
      stat = false;
    else
      stat = currency.Next;
    end;
  end;
                             
  if ( mustDropFilter )
    currency.dropFilter;
  end;
  
end;


/**************************************************************************\
|                             Выпуск формы 68                              |
\**************************************************************************/
macro DoReport

  var i = 0;
  var j = 0;
  var num_el = 0;
  var stat; 

  if ( not OutStandartRep )
     OutNotStandartHeader( );
  end;

  while ( i < ASize( ABalAccs ) )

    BalAcc = ABalAccs( i );

    j = 0;

    /* Определим идентификационные символы для данного вида вклада */
    DefIdentChar( );

    RestAll        = $0;
    ColOpAll       = 0;
    PeriodKredAll  = $0;
    PeriodDebAll   = $0;
    PeriodOpenAll  = 0;
    PeriodCloseAll = 0;
    RestOutputAll  = $0;
    CountOutputAll = 0;


    while ( j < ASize( AIdentChars ) )

      IdentChar = AIdentChars( j );

      Message(" Обрабатываются вклады балансового счета ",Trim(ABalAccs(i)),"/",Trim(AIdentChars(j))," ...");

      ASize( AKinds, 0 );
      ASize( AFlagRez, 0 );

      sb_dtyp.KeyNum = 1;
      sb_dtyp.rec.FlagCur = FlagCur;
      sb_dtyp.rec.Priorit = 0;

      sb_dtyp.addFilter( "t.t_FlagCur = " + string( FlagCur ) +
                         " and ( t.t_BalAcc = " + GetSQLString( ABalAccs(i) ) + " or t.t_BalAccNotRez = " + GetSQLString( ABalAccs(i) ) + " ) " +
                         " and t.t_NewIdentChar = " + GetSQLString( AIdentChars(j) ) );

      stat = sb_dtyp.GetGE;
      while (stat)
        if (sb_dtyp.rec.FlagCur == FlagCur)
          if ((sb_dtyp.rec.BalAcc             == ABalAccs(i)   ) AND
              (Trim(sb_dtyp.rec.NewIdentChar) == AIdentChars(j))    )            
            num_el = ASize( AKinds );
            AKinds( num_el ) = sb_dtyp.rec.Kind;
            AFlagRez( num_el ) = StrFor( 0 );
          end;
          if ((sb_dtyp.rec.BalAccNotRez       == ABalAccs(i)   ) AND
              (Trim(sb_dtyp.rec.NewIdentChar) == AIdentChars(j))    )
            num_el = ASize( AKinds );
            AKinds( num_el ) = sb_dtyp.rec.Kind;
            AFlagRez( num_el ) = StrFor( 1 );            
          end;
          stat = sb_dtyp.Next;
        else
          stat = FALSE;
        end;
      end;    

      sb_dtyp.dropFilter;

      if ( ASize( AKinds ) > 0 )
        WorkWithStatForBalAccAndIdentChar( );
      end;

      j = j + 1;
    end;

    if( not OutStandartRep and ( ( RestOutputAll != $0 ) or ( RestAll != $0 ) ) )
       OutNotStandartBalItog( );
    end;

    i = i + 1;
  end;

  if ( not OutStandartRep and ( ( ItogoRest != $0 ) or ( ItogoRestOut != $0 ) ) )
    OutNotStandartItogo( );
  end;

end;


/**************************************************************************\
|                      Определение балансовых счетов                       |
\**************************************************************************/
macro DefBalAccs

  var stat;
  var FindBA;
  var FindBA_NotRez;
  var TmpVal;
  var i = 0;
  var j = 0;

  Message(" Определение балансовых счетов ...");

  /* Получение массива всех возможных балансовых счетов */
  sb_dtyp.KeyNum = 2;
  sb_dtyp.rec.FlagCur = FlagCur;
  sb_dtyp.rec.Kind    = "";

  sb_dtyp.addFilter( "t.t_FlagCur = " + string( FlagCur ) +
                     " and exists ( select 0 from ddepositr_dbt d where d.t_IsCur = t.t_FlagCur and d.t_Type_Account = t.t_Kind )" );

  stat = sb_dtyp.GetGE;
  while (stat)
    if (sb_dtyp.rec.FlagCur == FlagCur)
      if (ASize(ABalAccs) == 0)
        ABalAccs(0) = Trim(sb_dtyp.rec.BalAcc);
      end;
      FindBA        = FALSE;
      FindBA_NotRez = FALSE;
      i = 0;
      while (i < ASize(ABalAccs))
        if (ABalAccs(i) == Trim(sb_dtyp.rec.BalAcc))
          FindBA = TRUE;
        end;
        if (ABalAccs(i) == Trim(sb_dtyp.rec.BalAccNotRez))
          FindBA_NotRez = TRUE;
        end;
        i = i + 1;
      end;
      if (FindBA == FALSE)
        ABalAccs(ASize(ABalAccs)) = Trim(sb_dtyp.rec.BalAcc);
      end;
      if (FindBA_NotRez == FALSE)
        if (Trim(sb_dtyp.rec,BalAcc) != Trim(sb_dtyp.rec.BalAccNotRez))
          ABalAccs(ASize(ABalAccs)) = Trim(sb_dtyp.rec.BalAccNotRez);
        end;
      end;
      stat = sb_dtyp.Next;
    else
      stat = FALSE;
    end;
  end;    

  sb_dtyp.dropFilter;

  /* Отсортируем полученный массив балансовых счетов в порядке возрастания */
  if (ASize(ABalAccs) > 0)
    i = 0;
    while (i < ASize(ABalAccs))
      j = i;
      while (j < ASize(ABalAccs))
        if (ABalAccs(j) < ABalAccs(i))
          TmpVal = ABalAccs(i);
          ABalAccs(i) = ABalAccs(j);
          ABalAccs(j) = TmpVal;
        end;
        j = j + 1;
      end;
      i = i + 1;
    end;
  end;

end;


