  i = 0;
  while ( i < ASize( ABranches ) )
    j = 0;
    while ( j < ASize( AKinds ) )
      cmd_getDepStat = RsdCommand( "select * " +
                                   "from ( select * " +
                                   "       from dsb_depst_dbt " +
                                   "       where t_FNCash = ? " +
                                   "         and t_IsCur = ? " +
                                   "         and t_Kind = ? " +
                                   "         and t_CodCur = ? " +
                                   "         and t_FlagRez = chr( ? ) " +
                                   "         and t_Date < ? " +
                                   "       order by t_Date desc, t_Mode desc )" +
                                   "where rownum = 1" );  

      cmd_getDepStat.addParam( "fnCash", RSDBP_IN );
      cmd_getDepStat.addParam( "isCur", RSDBP_IN );
