/**************************************************************************\
|            Написать данные об оборотах по виду вклада за день            |
\**************************************************************************/
macro DayRecReport

  var RestEqv     = $0.0L;
  var KredEqv     = $0.0L;
  var DebEqv      = $0.0L;
  var RestPer     = $0.0L;
  var KredPer     = $0.0L;
  var DebPer      = $0.0L;
  var DeltaPer    = $0.0L;
  var PrevRestAcc = CurRestAcc;
  var d,m,y;

  CurCountAcc = CurCountAcc + sb_depst_cur.rec.CurOpenAc - sb_depst_cur.rec.CurClosAc;
  CurRestAcc  = CurRestAcc  + sb_depst_cur.rec.KredSum +  sb_depst_cur.rec.HiddenKredSum  - sb_depst_cur.rec.DebSum - sb_depst_cur.rec.HiddenDebSum;

  if ( FlagCur ) /* Переоценка - предыдущий остаток на разницу курсов */
    KredPer = ( PrevRestAcc * Rate ) - ( PrevRestAcc * PrevRate );
    if ( KredPer < 0 )
      DebPer  = -KredPer;
      KredPer = $0.0L;
    end;
    RestPer = PrevRestEqv + KredPer - DebPer;
    DeltaPer = ( CurRestAcc * Rate ) - ( ( PrevRestAcc * PrevRate ) + ( ( sb_depst_cur.rec.KredSum + sb_depst_cur.rec.HiddenKredSum ) * Rate ) - ( ( sb_depst_cur.rec.DebSum + sb_depst_cur.rec.HiddenDebSum ) * Rate ) + KredPer - DebPer );
  end;

  DateSplit( DateRep, d ,m, y );
  d = String( d );
  m = String( m );
  y = String( y );
  while ( StrLen( d ) < 2 )
    d = "0" + d;
  end;
  while ( StrLen( m ) < 2 )
    m = "0" + m;
  end;
  while ( StrLen( y ) < 4 )
    y = "0" + y;
  end;

  if ( FlagCur )
    RestEqv = CurRestAcc           * Rate;
    KredEqv = ( sb_depst_cur.rec.KredSum /*+ sb_depst_cur.HiddenKredSum*/ ) * Rate;
    DebEqv  = ( sb_depst_cur.rec.DebSum /*+ sb_depst_cur.HiddenDebSum*/ )  * Rate;

    if ( OutStandartRep )

      [|   ##.##.####    |    ######  |  ############## |    ######  |  ############## |  ########  |  #################### |]
      (d,m,y,sb_depst_cur.rec.CurOpenAc:6,(sb_depst_cur.rec.KredSum /*+ sb_depst_cur.HiddenKredSum*/):14:2:a,sb_depst_cur.rec.CurClosAc:6,(sb_depst_cur.rec.DebSum /*+ sb_depst_cur.HiddenDebSum*/):14:2:a,CurCountAcc:8,CurRestAcc:20:2:a);
      [|  Курс, RUR/###  |------------+-----------------+------------+-----------------+------------+-----------------------+]
      (currency.rec.Short_Name);
      [|    #########    |                   ########## |                   ########## |               #################### |]
      (Rate:9:4,KredPer:10:2:a,DebPer:10:2:a,RestPer:20:2:a);
      [|                 |             ################ |             ################ | (######)      #################### |]
      (KredEqv:16:2:a,DebEqv:16:2:a,DeltaPer:6:2:a,RestEqv:20:2:a);
      [+-----------------+------------+-----------------+------------+-----------------+------------+-----------------------+];

    end;

    PrevRestEqv = RestEqv;
  else
    if ( OutStandartRep )

      [|   ##.##.####    |    ######  |  ############## |    ######  |  ############## |  ########  |   #################### |]
      (d,m,y,sb_depst_cur.rec.CurOpenAc:6,(sb_depst_cur.rec.KredSum /*+ sb_depst_cur.HiddenKredSum*/):14:2:a,sb_depst_cur.rec.CurClosAc:6,(sb_depst_cur.rec.DebSum /*+ sb_depst_cur.HiddenDebSum*/):14:2:a,CurCountAcc:8,CurRestAcc:20:2:a);
      [+-----------------+------------+-----------------+------------+-----------------+------------+------------------------+];

    end;
  end;

  PrintDayRec = true;

  PrevRate = Rate;

  PeriodOpen  = PeriodOpen  + sb_depst_cur.rec.CurOpenAc;
  PeriodClose = PeriodClose + sb_depst_cur.rec.CurClosAc;
  PeriodKred  = PeriodKred  + sb_depst_cur.rec.KredSum /*+ sb_depst_cur.HiddenKredSum*/;
  PeriodDeb   = PeriodDeb   + sb_depst_cur.rec.DebSum /*+ sb_depst_cur.HiddenDebSum*/;

end;


/**************************************************************************\
|           Определить параметры по виду вклада за текущий день            |
\**************************************************************************/
macro DefCurrentDayParams

  var i = 0;
  var j = 0;
  var stat;
  var rs;
  var cmd_getDepStat = RsdCommand;

  sb_depst_cur.Clear;
  sb_depst_cur.rec.FNCash  = DlgFNCash;
  sb_depst_cur.rec.IsCur   = FlagCur;
  sb_depst_cur.rec.CodCur  = currency.rec.Code_Currency;
  sb_depst_cur.rec.Date    = DateRep;

  i = 0;
  while ( i < ASize( ABranches ) )
    j = 0;
    while ( j < ASize( AKinds ) )
      cmd_getDepStat = RsdCommand( "select * " +
                                   "from dsb_depst_dbt " +
                                   "where t_FNCash = ? " +
                                   "  and t_IsCur = ? " +
                                   "  and t_Kind = ? " +
                                   "  and t_CodCur = ? " +
                                   "  and t_FlagRez = chr( ? ) " +
                                   "  and t_Date = ? " );

      cmd_getDepStat.addParam( "fnCash", RSDBP_IN );
      cmd_getDepStat.addParam( "isCur", RSDBP_IN );
      cmd_getDepStat.addParam( "kind", RSDBP_IN );
      cmd_getDepStat.addParam( "codCur", RSDBP_IN );
      cmd_getDepStat.addParam( "flagRez", RSDBP_IN );
      cmd_getDepStat.addParam( "date", RSDBP_IN );

      cmd_getDepStat.value( "fnCash" ) = ABranches( i );
      cmd_getDepStat.value( "isCur" ) = FlagCur;
      cmd_getDepStat.value( "kind" ) = AKinds( j );
      cmd_getDepStat.value( "codCur" ) = currency.rec.Code_Currency;
      cmd_getDepStat.value( "flagRez" ) = codeFor( AFlagRez( j ) );
      cmd_getDepStat.value( "date" ) = DateRep;
                             
      cmd_getDepStat.execute;
      rs = RsdRecordset( cmd_getDepStat );

      while ( rs.moveNext )
        sb_depst_cur.rec.CurOpenAc = sb_depst_cur.rec.CurOpenAc + rs.value( "t_CurOpenAc" );
        sb_depst_cur.rec.CurClosAc = sb_depst_cur.rec.CurClosAc + rs.value( "t_CurClosAc" );
        sb_depst_cur.rec.DebSum    = sb_depst_cur.rec.DebSum    + rs.value( "t_DebSum" );
        sb_depst_cur.rec.KredSum   = sb_depst_cur.rec.KredSum   + rs.value( "t_KredSum" );
        sb_depst_cur.rec.HiddenDebSum    = sb_depst_cur.rec.HiddenDebSum    + rs.value( "t_HiddenDebSum" );
        sb_depst_cur.rec.HiddenKredSum   = sb_depst_cur.rec.HiddenKredSum   + rs.value( "t_HiddenKredSum" );
      end;       
      rs.close;

      j = j + 1;
    end;
    i = i + 1;
  end;

end;


/**************************************************************************\
|               Определить входящие параметры по виду вклада               |
\**************************************************************************/
macro DefInputParams

  var i = 0;
