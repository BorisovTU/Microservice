\**************************************************************************/
macro WriteBalAccAndIdentCharForDefCurrencyReport

  var FindRecBeforeBegDate = false;
  var FindRecInPeriod      = false;
  var i                    = 0;
  var j                    = 0;
  var 
    rs,
    cmd_getDepStat;

  PrintDayRec = false;

  CurCountAcc = 0;
  CurRestAcc  = $0L;

  PeriodOpen  = 0;
  PeriodClose = 0;
  PeriodKred  = $0L;
  PeriodDeb   = $0L;

  PrevRestEqv = $0L;

  DefInputParams( );

  if ( ( sb_depst_input.rec.ColOpenedAcc != 0 ) OR ( sb_depst_input.rec.Rest != 0 ) )
    FindRecBeforeBegDate = true;
  end;

  if ( not FindRecBeforeBegDate )

    i = 0;
    while ( i < ASize( ABranches ) )
      j = 0;
      while ( j < ASize( AKinds ) )
        cmd_getDepStat = RsdCommand( "select * " +
                                     "from dsb_depst_dbt " +
                                     "where t_FNCash = ? " +
                                     "  and t_IsCur = ? " +
                                     "  and t_Kind = ? " +
                                     "  and t_CodCur = ? " +
                                     "  and t_FlagRez = chr( ? ) " +
                                     "  and t_Date between ? and ? " );

        cmd_getDepStat.addParam( "fnCash", RSDBP_IN );
        cmd_getDepStat.addParam( "isCur", RSDBP_IN );
        cmd_getDepStat.addParam( "kind", RSDBP_IN );
        cmd_getDepStat.addParam( "codCur", RSDBP_IN );
        cmd_getDepStat.addParam( "flagRez", RSDBP_IN );
        cmd_getDepStat.addParam( "minDate", RSDBP_IN );
        cmd_getDepStat.addParam( "maxDate", RSDBP_IN );

        cmd_getDepStat.value( "fnCash" ) = ABranches( i );
        cmd_getDepStat.value( "isCur" ) = FlagCur;
        cmd_getDepStat.value( "kind" ) = AKinds( j );
        cmd_getDepStat.value( "codCur" ) = currency.rec.Code_Currency;
        cmd_getDepStat.value( "flagRez" ) = codeFor( AFlagRez( j ) );
        cmd_getDepStat.value( "minDate" ) = InputPanel.BegDate;
        cmd_getDepStat.value( "maxDate" ) = InputPanel.EndDate;

        cmd_getDepStat.execute;
        rs = RsdRecordset( cmd_getDepStat );

        if ( rs.moveNext )        
          FindRecInPeriod = true;
          i = ASize( ABranches );
          j = ASize( AKinds );
        end;
        rs.close;
        j = j + 1;
      end;
      i = i + 1;
    end;
  end;

  if ( FindRecBeforeBegDate OR FindRecInPeriod )
    Rate = DefCurRate( InputPanel.BegDate - 1 );
    PrevRate = Rate;
    if( OutStandartRep )
       HeadReport( );
    end;

    DateRep = InputPanel.BegDate;
    while ( DateRep <= InputPanel.EndDate )
      DefCurrentDayParams( );
      Rate = DefCurRate( DateRep );
      if ( ( sb_depst_cur.rec.CurOpenAc     != 0    ) or
           ( sb_depst_cur.rec.CurClosAc     != 0    ) or
           ( sb_depst_cur.rec.DebSum        != 0    ) or
           ( sb_depst_cur.rec.KredSum       != 0    ) or
           ( sb_depst_cur.rec.HiddenDebSum  != 0    ) or
           ( sb_depst_cur.rec.HiddenKredSum != 0    ) or
           ( PrevRate                   != Rate ) or
           ( OutputZeroDay                      )   )
        DayRecReport( );
      end;
      DateRep = DateRep + 1;
    end;

    DefOutputParams( );
    if ( OutStandartRep )
      BottomReport( );
    else
      OutNotStandartLine( );
    end;
  end;

end;


