/**************************************************************************\
|                  Определение идентификационных символов                  |
\**************************************************************************/
macro DefIdentChar

  var stat;
  var FindIdentChar;
  var TmpVal;
  var i = 0;
  var j = 0;

  ASize( AIdentChars, 0 );

  sb_dtyp.KeyNum = 4;
  sb_dtyp.rec.FlagCur = FlagCur;
  sb_dtyp.rec.BalAcc  = BalAcc;
  sb_dtyp.addFilter( "t.t_FlagCur = " + string( FlagCur ) +
                     " and t.t_BalAcc = " + GetSQLString( BalAcc ) +
                     " and exists ( select 0 from ddepositr_dbt d where d.t_IsCur = t.t_FlagCur and d.t_Type_Account = t.t_Kind )" );
  stat = sb_dtyp.GetGE;
  while (stat)
    if ((sb_dtyp.rec.FlagCur == FlagCur) AND
        (sb_dtyp.rec.BalAcc  == BalAcc )    )
      FindIdentChar = FALSE;
      i = 0;
      while (i < ASize(AIdentChars))
        if (AIdentChars(i) == Trim(sb_dtyp.rec.NewIdentChar))
          FindIdentChar = TRUE;
          i = ASize(AIdentChars);
        end;
        i = i + 1;
      end;
      if (NOT FindIdentChar)
        i = ASize(AIdentChars);
        AIdentChars(i) = Trim(sb_dtyp.rec.NewIdentChar);
      end;
      stat = sb_dtyp.Next;
    else
      stat = FALSE;
    end;
  end;

  sb_dtyp.dropFilter;

  sb_dtyp.KeyNum = 5;
  sb_dtyp.rec.FlagCur      = FlagCur;
  sb_dtyp.rec.BalAccNotRez = BalAcc;
  sb_dtyp.addFilter( "t.t_FlagCur = " + string( FlagCur ) +
                     " and t.t_BalAccNotRez = " + GetSQLString( BalAcc ) +
                     " and exists ( select 0 from ddepositr_dbt d where d.t_IsCur = t.t_FlagCur and d.t_Type_Account = t.t_Kind )" );
  stat = sb_dtyp.GetGE;
  while (stat)
    if ((sb_dtyp.rec.FlagCur      == FlagCur) AND
        (sb_dtyp.rec.BalAccNotRez == BalAcc )    )
      FindIdentChar = FALSE;
      i = 0;
      while (i < ASize(AIdentChars))
        if (AIdentChars(i) == Trim(sb_dtyp.rec.NewIdentChar))
          FindIdentChar = TRUE;
          i = ASize(AIdentChars);
        end;
        i = i + 1;
      end;
      if (NOT FindIdentChar)
        i = ASize(AIdentChars);
        AIdentChars(i) = Trim(sb_dtyp.rec.NewIdentChar);
      end;
      stat = sb_dtyp.Next;
    else
      stat = FALSE;
    end;
  end;

  sb_dtyp.dropFilter;

  /* Отсортируем полученный массив идентификационных символов в порядке возрастания */
  if (ASize(AIdentChars) > 0)
    i = 0;
    while (i < ASize(AIdentChars))
      j = i;
      while (j < ASize(AIdentChars))
        if (AIdentChars(j) < AIdentChars(i))
          TmpVal = AIdentChars(i);
          AIdentChars(i) = AIdentChars(j);
          AIdentChars(j) = TmpVal;
        end;
        j = j + 1;
      end;
      i = i + 1;
    end;
  end;

end;


