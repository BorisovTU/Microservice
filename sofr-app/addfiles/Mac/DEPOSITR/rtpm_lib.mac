/*
  Работа с файлом rt_paym.dbt
*/
/* файл */
file rt_paym("rt_paym.dbt") key 0 write;
/* структуры */
record rt_paym1("rt_paym.1");
/* поиск атрибута документа */
macro rtpaymFindByAttrID( AppKind, AppKey, AttrID )
  clearRecord( rt_paym );
  setRecordAddr( rt_paym1, rt_paym );
  rt_paym.iApplicationKind = AppKind;
  rt_paym.ApplicationKey   = AppKey;
  rt_paym.AttrID           = AttrID;
  return getEQ( rt_paym );
end;