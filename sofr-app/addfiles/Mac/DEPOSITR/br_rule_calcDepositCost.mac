macro ListFieldValues( numParameter, parameterType )
  record llvalues("llvalues.dbt");
  var retval = "";
  var stat;
  var res;

  if ( parameterType == BR_PROP_KEY )
    if ( numParameter == nf_key1 )
      var DepType;
      var codFlagCur = 2;
      var rt = SelectDepTypeWithCond( DepType, codFlagCur );
      if ( rt )
        element.key1 = string(DepType);
        retval = string(DepType);
      end;
    elif ( numParameter == nf_key2 )
      var CurrCodeP = -1;
      if ( SelectCurrency( CurrCodeP, true, true, true ) )
        element.key2 = string(CurrCodeP);
        var findCurP =  rsdcommand("select * from dcurrency_dbt where T_CODE_CURRENCY = ?");
        findCurP.AddParam("codeCur", RSDBP_IN, Int(CurrCodeP));
        findCurP.nullConversion = true;
        findCurP.execute();
        var rs_findCurP = RsdRecordset(findCurP);
        if ( rs_findCurP.moveNext() )
          retval = rs_findCurP.value("T_SHORT_NAME");
        end;
      else
        if ( ( element.key2 != StrFor( 1 ) ) and (element.key2 >= -1) )
        ;
        else
          element.key2 = string(CurrCodeP);
        end;
      end;
    elif ( numParameter == nf_key3 )
    elif ( numParameter == nf_key4 )
    elif ( numParameter == nf_key5 )
    end;
  elif( parameterType == BR_PROP_VALUE )
    if ( numParameter == nf_value1 )
      res = list_alg(780);
      if (res != element.value1)
        retval = GetNameAlg(780, res);
        element.value1 = string(res);
      end;
    elif ( numParameter == nf_value2 )
      res = list_alg(755);
      if (res != element.value2)
        retval = GetNameAlg(755, res);
        element.value2 = string(res);
      end;
    end;
  end;

  return retval;
end;

macro GetFieldsText();
