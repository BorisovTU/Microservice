  record llvalues("llvalues.dbt");
  var res;

  rule.rec.key1   = element.key1;

  if ( (element.key2 == StrFor(0)) or (element.key2 == StrFor(1)) )
    element.key2 = "-1";
  end;
  rule.rec.key2   = element.key2;
  var findCurP =  rsdcommand("select * from dcurrency_dbt where T_CODE_CURRENCY = ?");
  findCurP.AddParam("codeCur", RSDBP_IN, Int(element.key2));
  findCurP.nullConversion = true;
  findCurP.execute();
  var rs_findCurP = RsdRecordset(findCurP);
