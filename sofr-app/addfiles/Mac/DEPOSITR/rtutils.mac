//---------------------------------------------------------------------------
/*!
 * По имени функции возвращает ссылку на функцию
 * если имя не найдено, возвращает null
 */
macro FindMacro( fn )
  return ExecExp("@" + fn);
onerror
  return null;
end;
//---------------------------------------------------------------------------
/*!
 * Проверяет есть ли у объекта obj свойство или метод prop
 */
macro objHasProp( obj, prop )
  return (GenPropID(obj, prop) >= 0) ;
end;
//---------------------------------------------------------------------------
/*!
 * Функция как оператор C++ ?:
 */
macro IIF(condition, tval, fval)
  if( condition )
    return tval;
  else
    return fval;
  end;
end;
//---------------------------------------------------------------------------
/*!
 * Обменивает 2 значения
 */
macro swap( a, b )
  setparm(0, b);
  setparm(1, a);
end;
//---------------------------------------------------------------------------
/*!
 * Постинкремент
 */
macro pinc( v )
  setparm(0, v+1);
  return v;
end;
//---------------------------------------------------------------------------
/*!
 * Преинкремент
 */
macro inc( v )
  setparm(0, v+1);
  return v+1;
end;
//---------------------------------------------------------------------------
/*!
 * Стандартный формат даты
 */
macro formatDate(val)
  var dd,mm,yy;
  DateSplit (val, dd, mm, yy);
  return string (dd:2:o)+"."+string(mm:2:o)+"."+string(yy:4:o);
end;

