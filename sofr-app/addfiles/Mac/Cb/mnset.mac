// макрос проверки сохраняемых настроек пользователя/группы

import Globals, BankInter;

record mnset_buf( mnset );   // буфер налоговых реквизитов

macro CheckMnSet():integer

  var stat:integer = 0;

  if( mnset_buf.Refresh == 0 )
    MsgBox("Не заполнено обязательное поле 'Период обновления'");
    stat = 1;
  end;

  return stat;

end;
