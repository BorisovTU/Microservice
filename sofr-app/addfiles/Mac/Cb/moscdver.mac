                if (Статус == 531)
                        Статус    = 1834;
                        Сообщение = "Для дубликата найдено несколько оригиналов";
                end;

               
                select = "SELECT rm.t_Number "                       + 
                         "FROM dpmdupaym_dbt pm, dpmdurmpp_dbt rm " + 
                         "WHERE pm.t_DocKind    = :dockind "        +  
                         "  AND pm.t_DocumentID = :docid "          + 
                         "  AND pm.t_Purpose    = :purp "           + 
                         "  AND pm.t_SubPurpose = :subpurp "        +
                         "  AND pm.t_PaymentID  = rm.t_PaymentID; " ;

                params = makeArray( SQLParam("dockind",mo_firstdoc.DocKind ),
                                    SQLParam("docid",  mo_firstdoc.OrderID ),
                                    SQLParam("purp",   PM_PURP_BANKPAYMENT ),
                                    SQLParam("subpurp", 0) );
                rs = execSQLselect( select, params, FALSE );
                
                if( rs AND rs.moveNext() ) 
                   num = rs.value(0) ;
                end;

         StrSplit(StrSubst(Сообщение, "|", " " ), StringArray, 56);
[|#########|######|############################################################|](num,Статус,StringArray(0));
         while ( StrLen(StringArray(i) ) > 0)
[|         |      |############################################################|](StringArray(i));
           i = i + 1;
         end;
                
