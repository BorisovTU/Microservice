PRIVATE MACRO ShowRep(ContrID) 

   var  RS, cmd;

   cmd = RSDCommand( "select t_backoffice, t_number, t_account, t_client from  dprccontract_dbt where t_contractid = ? ") ;
   cmd.addParam( "", RSDBP_IN, ContrID );
   cmd.execute();
   RS = TRsbDataSet(cmd);
   if (RS.movenext())
       PrintSubHead();
       PrintLine(RS);
       PrintDetailLine(ContrID);
   end;
END;


