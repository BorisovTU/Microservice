MACRO MpcCommonSrvReport (oper, ProcDate, Mode, PartyIDFil, TypeOfAccounts, FininstrFIID, AccountMask, PartyIDClient, backoffice, NumberMin, NumberMax, GrCalc, CalcID, RateID, UserType, BeginDateMin, BeginDateMax)

   var  RS, cmd;

    goper = oper; 
    gProcDate = ProcDate; 
    gMode = Mode;
    gPartyIDFil = PartyIDFil; 
    gTypeOfAccounts = TypeOfAccounts; 
    gFininstrFIID = FininstrFIID; 
    gAccountMask = AccountMask; 
    gPartyIDClient = PartyIDClient; 
    gbackoffice = backoffice; 
    gNumberMin = NumberMin; 
    gNumberMax = NumberMax; 
