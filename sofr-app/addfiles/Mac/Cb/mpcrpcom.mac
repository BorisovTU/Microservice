       if (gPartyIDFil > 0)
          ShowReportForFilial();
       else
          cmd = RSDCommand ("select distinct t_department from dprcsrvacc_tmp where t_department is not NULL and t_department > 0 ");
          cmd.execute();
          RS = TRsbDataSet(cmd);
          while( RS.movenext())
             gDepID = RS.department;
             PumpDepName();
             [ ];
             [ ”¨«¨ «:           ###################################### ](gDepName);         
