MACRO AddStrSymbols(str1:string,str2:string,length:integer):string
  var count:integer = length - strlen(str1) - strlen(str2);
  var res:string = "";
  var addstr:string = "";
  
  while (count > 0)
    addstr = addstr + "=";
    count = count - 1;
  end;
  res = str1 + addstr + str2;
  return res;
end;

