            if ( CurrAddPI.rec.FIID != NATCUR )
              IsCurrency = "X";  
            end;
            stat = AddPI.Next;              
          end;              
        end;      
      elif (pmpaym.rec.PayFIID != NATCUR )
        IsCurrency = "X"; 
      end;
    end;
      
    PayerAccount = pmpaym.rec.PayerAccount;

