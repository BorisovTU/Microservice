    Ground = pmrmprop.rec.Ground;
    
    ArraySym = TArray;
    ArrayPartSum = TArray;
    var i: integer = 0;                                  
    while( i < 5 )                                
      ArraySym.value(i) = "";                                     
      ArrayPartSum.value(i) = "";                              
      i = i + 1;                                         
    end;                                                 
    ArraySym.value(0) = pmrmprop.rec.cashSymbolDebet;       
