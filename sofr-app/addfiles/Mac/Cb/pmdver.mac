const   Ошибка   = 0,
        Первый   = 1,
        Последний= 2;

MACRO Печать_ОтчетСканирования (Вызов,firstdoc,Статус,Сообщение)

   var stat, i = 1;
   array StringArray;
   var select:string;
   var params:TArray;
   var rs:object;
   var num;

        setbuff (pm_firstdoc,firstdoc);

        if (Вызов==Первый)
