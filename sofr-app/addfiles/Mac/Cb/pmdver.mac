                if (Статус == 0)
                    Сообщение = "Верификация прошла успешно";
                end;

                if (Статус == 531)
                    Статус    = 1834;
                    Сообщение = "Для дубликата найдено несколько оригиналов";
                end;

                select = "SELECT rm.t_Number " + 
                         "FROM dpmdurmpp_dbt rm " + 
                         "WHERE rm.t_PaymentID  = :PaymentID ";

                params = makeArray( SQLParam("PaymentID",  pm_firstdoc.PaymentID ) );
                rs = execSQLselect( select, params, FALSE );
                
                if( rs AND rs.moveNext() ) 
                   num = rs.value(0) ;
