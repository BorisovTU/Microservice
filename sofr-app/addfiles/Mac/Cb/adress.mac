IMPORT PtInter;

FILE adress ("adress.dbt") key 0;

MACRO НайтиАдресСубъекта(PartyID,Тип,Адрес)

  adress.PartyID = PartyID;
  adress.Type = Тип;
  IF( GetEQ(adress) )
    copy(Адрес,adress);
    return true;
  ELSE
    return false;
  END;

END;

MACRO НайтиЮридическийАдресСубъекта(PartyID,Адрес)
  return НайтиАдресСубъекта(PartyID,PTADDR_LEGAL,Адрес);
END;

MACRO НайтиПочтовыйАдресСубъекта(PartyID,Адрес)
  return НайтиАдресСубъекта(PartyID,PTADDR_POST,Адрес);
END;
