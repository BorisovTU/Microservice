/*
   Макрос сортировки субъектов экономики
*/

Import PTInter, "pt_lib.mac";

macro GetSortParty( _party, _partcode )
  
  record party   ( "party.dbt"    );
  record partcode( "partcode.dbt" );

  SetBuff( party,    _party    );
  SetBuff( partcode, _partcode );

  if( partcode.CodeKind == PTCK_CONTR )
    return partcode.Code;
  end;
  return GetUserCode( partcode );

end;
