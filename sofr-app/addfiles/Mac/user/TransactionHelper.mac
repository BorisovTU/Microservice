// TransactionHelper.mac
import RSD;

class TransactionHelper()
   macro Begin()
      if (RslDefCon.IsInTrans())
         RslDefCon.BeginTrans();
      end;
   end;

   macro Commit()
      if (RslDefCon.IsInTrans())
         RslDefCon.CommitTrans();
      end;
   end;

   macro RollBack()
      if (RslDefCon.IsInTrans())
         RslDefCon.RollbackTrans();
      end;
   end;
end;