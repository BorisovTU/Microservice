/*
  $Name:         rollbackrtdoc_report.mac
  $Module:       АРМ бухгалтера
  $Description:  Отчет по откату выгрузки РДД в Бухгалтерии банка и сторонних системах
*/
import DeprIntr, sqlconv, rsd;

private var countErrorRecs = 0;
private var countSuccessfulRecs = 0;


/**************************************************************************\
|                                                                          |
\**************************************************************************/
private macro DefNameRDD( docType )

  var cmd;
  var rs;
  var name = "";

  cmd = RsdCommand( "select pmdtype.t_name as name from dpmdtype_dbt pmdtype where pmdtype.t_DocTypeId = :docType" );

  cmd.addParam( "docType", RSDBP_IN, docType );

  rs = RsdRecordset( cmd );

  cmd.execute( );

  if ( rs.moveNext( ) )
    if ( ValType( rs.value( "name" ) ) != V_UNDEF )
      name = rs.value( "name" );
      if ( name == StrFor( 1 ) )
        name = "";
      end;
    end;
  end;
    
  return name;
end;


/**************************************************************************\
|                                                                          |
\**************************************************************************/
private macro HeadRollbackRDD

  [ ];
  [ Протокол отката выгрузки расчетно-денежных документов];

end;


