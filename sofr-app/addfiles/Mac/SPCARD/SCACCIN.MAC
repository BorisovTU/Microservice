/**************************************************************************\
|                      Определение карточки по счету                       |
\**************************************************************************/
macro def_card_for_account

  var stat     = FALSE;
  var card_ref = 0;
  var stat_link;

  /* Сначала ищем главную карточку по счету */
  KeyNum(scLink,6);
  scLink.cardAccRef = depositr.Referenc;
  scLink.mainCard   = "X";
  if (GetEQ(scLink))
    if ((scLink.accCardLinkCloseDate == Date(0,0,0)) OR 
        (scLink.accCardLinkCloseDate <= date_doc   )   )
      card_ref = scLink.cardRef;
    end;
  end;

  /* Не нашли главную карточку по счету - ищем первую попавшеюся открытую */
  if (card_ref == 0)
    KeyNum(scLink,3);
    scLink.cardAccRef = depositr.Referenc;
    stat_link = GetEQ(scLink);
    while (stat_link)
      if (scLink.cardAccRef == depositr.Referenc)
        if ((scLink.accCardLinkCloseDate == Date(0,0,0)) OR 
            (scLink.accCardLinkCloseDate <= date_doc   )   )
          card_ref = scLink.cardRef;
          stat_link = FALSE;
        end;
        if (stat_link)
          stat_link = Next(scLink);
        end;
      else
        stat_link = FALSE;
      end;
    end;
  end;

  if (card_ref > 0)
    scCard.FNCash  = depositr.FNCash;
    scCard.cardRef = card_ref;
    stat = GetEQ(scCard);
  end;

  return stat;

end;


/**************************************************************************\
|                        Поиск счета для документа                         |
\**************************************************************************/
macro find_account

  var stat;

  scAcc.Referenc = sbdepdoc.Referenc;
  stat = GetEQ(scAcc);

  if (stat)
    if ((ps_ref == 0) OR (scAcc.psRef == ps_ref))
      depositr.Referenc = sbdepdoc.Referenc;
      stat = GetEQ(depositr);
    else
      stat = FALSE;
    end;
  end;

  return stat;

end;


