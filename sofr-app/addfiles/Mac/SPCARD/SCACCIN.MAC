/**************************************************************************\
|                  Обработка документов для одной валюты                   |
\**************************************************************************/
macro work_with_depdoc (KindOper, CountOpers, SummaOpers, FlagWriteToOutFile)

  var stat;
  var flag;

  CountOpers = 0;
  SummaOpers = $0L;

  ReWind(sbdepdoc);

  sbdepdoc.Date_Document = date_doc;

  stat = GetEQ(sbdepdoc);

  while (stat)
    if (sbdepdoc.Date_Document == date_doc)

      if ((sbdepdoc.InSum         > 0                      ) AND 
          (sbdepdoc.Code_Currency == currency.Code_Currency) AND
          (IsServDoc(sbdepdoc)                             ) AND
          (sbdepdoc.FlagStorn     == ""                    )    )
        if (((KindOper == OpenOper ) AND is_typeoper_open_oper ()) OR
            ((KindOper == OtherOper) AND is_typeoper_other_oper()) OR
            ((KindOper == FCOper   ) AND is_typeoper_fc_oper   ())   )
          if (find_account())
            if (def_card_for_account())
              CountOpers = CountOpers + 1;
              SummaOpers = SummaOpers + sbdepdoc.InSum;
              if (FlagWriteToOutFile)
                write_doc_to_output_file();
              end;
            end;
          end;
        end;
      end;

      stat = Next(sbdepdoc);
    else  
      stat = FALSE;
    end;
  end;

  SetParm(1,CountOpers);
  SetParm(2,SummaOpers);

end;


/**************************************************************************\
|                       Выпуск отчета для одной валюты                     |
\**************************************************************************/
macro do_report_for_one_currency (KindOper)

  var CountOpers     = 0;
  var SummaOpers     = $0L;
  var CountOpersPast = 0;
  var SummaOpersPast = $0L;
                                          
  work_with_depdoc(KindOper,CountOpers,SummaOpers,FALSE);
                     
  if (SummaOpers > 0)
    first_rec = TRUE;

    write_head_to_report_for_currency(KindOper,CountOpers,SummaOpers);
    work_with_depdoc(KindOper,CountOpersPast,SummaOpersPast,TRUE);
    write_tail_to_report_for_currency();

    if ((CountOpers != CountOpersPast) OR
        (SummaOpers != SummaOpersPast)   )
      was_change = TRUE;
    end;
  end;

end;


/**************************************************************************\
|                              Выпуск отчета                               |
\**************************************************************************/
macro do_report 

  var stat;
  var i;

  currency.Code_Currency = 0;

  stat = GetGE(currency);

  while (stat)

    Message(" Формируется отчет для валюты ",currency.ExternalCode," (первоначальные взносы) ...");
    do_report_for_one_currency(OpenOper);
    Message(" Формируется отчет для валюты ",currency.ExternalCode," (прочие операции) ...");
    do_report_for_one_currency(OtherOper);
    Message(" Формируется отчет для валюты ",currency.ExternalCode," (операции исправления) ...");
    do_report_for_one_currency(FCOper);

    stat = Next(currency);

  end;

end;


/**************************************************************************\
|                    Г Л А В Н А Я    П Р О Г Р А М М А                    |
\**************************************************************************/

  if (GetDate(date_doc,"Введите дату операций для формирования уведомления"))
    def_name_for_head();
    do_report();

    if (was_change)
      MsgBox("За время выпуска отчета возможно была проводка документов,|изменивших итоговую сумму|Отчет нужно перевыпустить");
