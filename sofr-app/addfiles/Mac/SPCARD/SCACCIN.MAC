const OP_FCCORR    = 50; /* Корректировка по данным последконтроля */
const OP_FCEXEC    = 52; /* Исполнение акта ПК                     */
const OP_OVERPAY   = 54; /* Переплата вклада                       */
const OP_OVERPERC  = 55; /* Переплата %                            */
const OP_UNDERPAY  = 56; /* Недоплата вклада                       */
const OP_UNDERPERC = 57; /* Недоплата %                            */
const OP_EDITDOC   = 60; /* Корректировка документа                */
