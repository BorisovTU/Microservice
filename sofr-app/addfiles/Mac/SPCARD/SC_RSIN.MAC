/*******************************************************************
            Подсчет итоговых сумм
*******************************************************************/
macro CalcSum (CodCur, MainSum, DopSum)

  var i;
  var FindArray = FALSE;

  if (ASize(ACodCur) == 0)
    ACodCur(0) = CodCur;
    ASumma (0) = MainSum;
    AComiss(0) = DopSum;
  else
    i = 0;
    while (i < ASize(ACodCur))
      if (CodCur == ACodCur(i))
    FindArray  = TRUE;
    ASumma (i) = ASumma (i) + MainSum;
    AComiss(i) = AComiss(i) + DopSum;
      end;
      i = i + 1;
    end;
    if (FindArray == FALSE)
      i = ASize(ACodCur);
      ACodCur(i) = CodCur;
      ASumma (i) = MainSum;
      AComiss(i) = DopSum;
    end;
  end;

end;


