  /* Определение банка, выпустившего карту */
  BankIssuer = Trim( {Name_Bank} );

  [ │##############│#####################│###################│###│##############│#########│##########│###│##############│]
  (CardIssuer,BankIssuer:w,scCard.cardNumber,CurOper,SummaOper:14:2:a,NumberSprav,Resident,CurCom,SummaCom);

end;


/*******************************************************************
               Поиск активной карточки
*******************************************************************/
macro FindSCCard

   var stat = FALSE;
   var flag;

   /* Сначала пытаемся найти главную карточку */
   KeyNum(scLink,6);
   scLink.cardAccRef = scAcc.Referenc;
   scLink.MainCard   = "X";
   if (GetEQ(scLink))
     KeyNum(scCard,0);
     scCard.FNCash = FNCash;
     scCard.cardRef = scLink.cardRef;
     if (GetEQ(scCard))
       if ((StateCompare(scCard.cardStateCode,"OFF__",6,scCard.psRef)) OR
       (StateCompare(scCard.cardStateCode,"OFFPC",6,scCard.psRef))   )
     ;
       else
     stat = TRUE;
       end;
     end;
   end;
   /* Главную карточку не нашли - ищем первую попавшеюся */
   if (NOT stat)
     KeyNum(scLink,3);
     scLink.cardAccRef = scAcc.Referenc;
     flag = GetEQ(scLink);
     while (flag)
       if (scLink.cardAccRef == scAcc.Referenc)
     KeyNum(scCard,0);
     scCard.FNCash = FNCash;
     scCard.cardRef = scLink.cardRef;
     if (GetEQ(scCard))
       if ((StateCompare(scCard.cardStateCode,"OFF__",6,scCard.psRef)) OR
           (StateCompare(scCard.cardStateCode,"OFFPC",6,scCard.psRef))   )
         ;
       else
         stat = TRUE;
       end;
     end;
     if (stat)
       flag = FALSE;
     else
       flag = Next(scLink);
     end;
       else
     flag = FALSE;
       end;
     end;
   end;

   return stat;

end;


/*******************************************************************
               Выпустить отчет
*******************************************************************/
macro DoReport

  var flag;
  var i;
  var Counter = 0;

  if (CodCur >= 0)
    ACodCurForWork(0) = CodCur;
  else
    if (FlagCur)
      KeyNum(currency,0);
      currency.Code_Currency = 1;
      flag = GetGE(currency);
      while (flag)
    i = ASize(ACodCurForWork);
    ACodCurForWork(i) = currency.Code_Currency;
    flag = Next(currency);
      end;
    else
      ACodCurForWork(0) = 0;
    end;
  end;

  i = 0;
  while (i < ASize(ACodCurForWork))
    /* Обнуление параметров для валюты */
    KeyNum(currency,0);
    currency.Code_Currency = ACodCurForWork(i);
    if (NOT GetEQ(currency))
      ClearRecord(currency);
    end;
    WasPrintTopReport = FALSE;
    ASize(ACodCur,0);
    ASize(ASumma, 0);
    ASize(AComiss,0);
    /* Цикл по операциям - наличным и приходу */
    KeyNum(sbdepdoc,0);
    sbdepdoc.IsCur         = FlagCur;
    sbdepdoc.FNCash        = FNCash;
    sbdepdoc.Date_Document = ReestrInPanel.DateReestr;
    sbdepdoc.Type_Account  = "";
    sbdepdoc.Code_Currency = 0;
    sbdepdoc.TypeOper      = 0;
    flag = GetGE(sbdepdoc);
    while (flag)
      if ((sbdepdoc.IsCur         == FlagCur                 ) AND
      (sbdepdoc.FNCash        == FNCash                  ) AND
      (sbdepdoc.Date_Document == ReestrInPanel.DateReestr)    )
    if ((sbdepdoc.VidDoc        == 1                ) AND
        (sbdepdoc.InSum         >  0                ) AND
        (sbdepdoc.Code_Currency == ACodCurForWork(i))    )
      /* Счет должен быть карточным */
      KeyNum(scAcc,0);
      scAcc.Referenc = sbdepdoc.Referenc;
      if ((GetEQ(scAcc)) AND (scAcc.psRef == psRef))
        /* Для данного счета должны быть активные карточки */
        if (FindSCCard())
          Counter = Counter + 1;
          Message(" Обрабатывается ",Counter:4," операция ...");
          WriteStringToReport();
        end;
      end;
    end;
    flag = Next(sbdepdoc);
      else
    flag = FALSE;
      end;
    end;
    if (WasPrintTopReport)
      BottomReport();
    end;
    i = i + 1;
  end;

end;


