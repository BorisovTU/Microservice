record OC_PAY_DOC ("pay_doc.np");   /* входной параметр */

private const OK_RES   =  0;
private const SKIP_RES =  1;
private const END_RES  =  2;
private const ERR_RES  = -1;

private const BIT_F_HAVE_DOCUMENT = 0;

private macro GetFIO(fio, name1, name2, name3)
  var i;

  name1 = Trim(fio);
  name2 = "";
  name3 = "";

  i = Index(name1, " ");
  if (i > 0)
    name2 = Trim(SubStr(name1, i + 1));
    name1 = SubStr(name1, 1, i - 1);
  end;

  i = Index(name2, " ");
  if (i > 0)
    name3 = Trim(SubStr(name2, i + 1));
    name2 = SubStr(name2, 1, i - 1);
  end;

  setparm(1, name1);
  setparm(2, name2);
  setparm(3, name3);
end;

private macro GetOperName(oper)
  file opr (person, "bank.def") key 0;
  var fio = "";
  var name1, name2, name3;
  
  opr.Oper = oper;
  if (getEQ(opr))
    GetFIO(opr.Name, name1, name2, name3);
    fio = name1;
    if (name2 != "")
      fio = fio + " " + SubStr(name2, 1, 1) + ".";
    end;
    if (name3 != "")
      fio = fio + " " + SubStr(name3, 1, 1) + ".";
    end;
  end;
  if (fio == "")
    fio = string(oper);
  end;
  return fio;
end;

private macro GetCurrISO(cod_curr)
  file currency("currency.dbt") key 0;
  var iso_curr = 0;

  ClearRecord(currency);
  currency.Code_Currency = cod_curr;
  if (GetEQ(currency))
    iso_curr = Int(currency.ExternalCode);
  end;

  if (iso_curr == 810)
    iso_curr = 643;
  end;
  return iso_curr;
end;

private macro PrintReport(fname)
  file report() txt;
  
  CopyFile("$" + ReportPahtTerm + fname, ReportPathServ + fname);
  if ((MacroOutput == "PRN"))
    PrintFile(ReportPathServ + fname);
  else
    open(report, ReportPathServ + fname);
    ViewFile(report);
  end;
end;

private macro Confirm()
  var ok = true;
  file rt_paym(rt_paym) key 0;
  record rrn_rec("rt_paym.rrn");
  var terminal;
  var operation;
  var have_document = false;
  
  if ((OC_PAY_DOC.GroupOpert == 11) and (OC_PAY_DOC.NumOpert == 38))
    ClearRecord(rt_paym);
    rt_paym.iApplicationKind = OC_PAY_DOC.iApplicationKind;
    rt_paym.ApplicationKey   = OC_PAY_DOC.ApplicationKey;
    rt_paym.AttrID = "RRN";
    if (GetEQ(rt_paym))
      SetRecordAddr(rrn_rec, rt_paym, 0, FldOffset(rt_paym, "Payment" ), true);
      terminal = CreateObject("rtposcom", "TPosTerminal", null, false);
      if (ok)
        ok = terminal.setUserName(GetOperName({oper}));
      end;

      if (ok)
        operation = terminal.createOperation(4012);
        operation.inParams.amount = Int(double(OC_PAY_DOC.InSum * 100));
        operation.inParams.currency = GetCurrISO(OC_PAY_DOC.CodCur);
        operation.inParams.rrn = rrn_rec.RRN;
        operation.inParams.receiverCard = rrn_rec.CardNumber;
        ok = operation.execute();
      end;

      if (ok and GetBitFlag(operation.postprocessingFlags, BIT_F_HAVE_DOCUMENT))
        ok = terminal.getReports(ReportPahtTerm + ReportFileName3);
        have_document = ok;
      end;

      if (have_document)
        PrintReport(ReportFileName3);
      end;
    end;
  end;
  return ok;

  OnError(err)
    msgbox("Ошибка при работе с POS-терминалом");
    return false;
end;

