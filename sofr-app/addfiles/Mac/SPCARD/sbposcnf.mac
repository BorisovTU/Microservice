    else
      MsgBox("Операция подтверждена ПЦ.|Снятие подтверждения с документа невозможно");
    end;*/
    if (OC_PAY_DOC.NotConfirm == 0) // считаем, что документ подтвержден в ПЦ, снять подтверждение нельзя
