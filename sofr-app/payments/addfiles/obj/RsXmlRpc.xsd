<?xml version="1.0" encoding="windows-1251"?>
<!-- edited with XMLSpy v2009 sp1 (http://www.altova.com) by Orlov Valery (R-Style Softlab) -->
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:r="http://www.softlab.ru/xml-rpc/schema" targetNamespace="http://www.softlab.ru/xml-rpc/schema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0">
        <xsd:annotation>
                <xsd:documentation>Схема определяющая структуру запросов и ответов XML-RPC в рамках интеграции с RS-Bank V.6 release 4
                </xsd:documentation>
        </xsd:annotation>
        <xsd:element name="methodCall">
                <xsd:annotation>
                        <xsd:documentation>Корневой элемент для запроса. Используется для указания имени вызываемого метода и передачи параметров.
                        </xsd:documentation>
                </xsd:annotation>
                <xsd:complexType>
                        <xsd:sequence>
                                <xsd:element name="methodName">
                                        <xsd:annotation>
                                                <xsd:documentation>Имя вызываемого метода. Задается по шаблону RunMacro.[имя макроса].[имя макропроцедуры].</xsd:documentation>
                                        </xsd:annotation>
                                        <xsd:simpleType>
                                                <xsd:restriction base="xsd:string">
                                                        <xsd:pattern value="\c+.\c+.\c+"/>
                                                </xsd:restriction>
                                        </xsd:simpleType>
                                </xsd:element>
                                <xsd:element name="params" type="r:paramsType">
                                        <xsd:annotation>
                                                <xsd:documentation>Контейнер для набора параметров.
                                                </xsd:documentation>
                                        </xsd:annotation>
                                </xsd:element>
                        </xsd:sequence>
                        <xsd:attribute ref="r:reqId" use="required">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор сообщения. Необходим для связи запроса и ответа.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:logicalId" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Логический идентификатор сообщения. Необходим для отслеживания запроса при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:oper" default="0">
                                <xsd:annotation>
                                        <xsd:documentation>Номер операциониста RsBank. Если поле не пустое, запрос выполняется от имени указанного пользователя.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:source" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор источника сообщения. Заполняется только при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:destination" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор получателя сообщения. Заполняется только при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:direction" default="0">
                                <xsd:annotation>
                                        <xsd:documentation>Код направленя сообщения. Возможны значения: 0 - запрос, 1 - ответ.Заполняется только при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:internal" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Для внутреннего использования.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:curdate">
                                <xsd:annotation>
                                        <xsd:documentation>Дата операционного дня, в котором работает операционист.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:sender" default="0">
                                <xsd:annotation>
                                        <xsd:documentation>Тип отправителя сообщения. См. PRJ_001167.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:sessionID" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор сессии. Используется для Web-интерфейса RS-Bank.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                </xsd:complexType>
        </xsd:element>
        <xsd:element name="methodResponse">
                <xsd:annotation>
                        <xsd:documentation>Корневой элемент для сообщения ответа. Содержит возвращаемое методом значение или структуру ошибки.
                        </xsd:documentation>
                </xsd:annotation>
                <xsd:complexType>
                        <xsd:choice>
                                <xsd:element name="fault">
                                        <xsd:annotation>
                                                <xsd:documentation>Контейнер ошибки.</xsd:documentation>
                                        </xsd:annotation>
                                        <xsd:complexType>
                                                <xsd:sequence>
                                                        <xsd:element name="value" type="r:valueType">
                                                                <xsd:annotation>
                                                                        <xsd:documentation>Значение ошибки. Определяется структурой с полями faultType, faultCode и faultCode.
                                                                        </xsd:documentation>
                                                                </xsd:annotation>
                                                        </xsd:element>
                                                </xsd:sequence>
                                        </xsd:complexType>
                                </xsd:element>
                                <xsd:element name="params" type="r:paramsType">
                                        <xsd:annotation>
                                                <xsd:documentation>Контейнер для возвращаемого значения.
                                                </xsd:documentation>
                                        </xsd:annotation>
                                </xsd:element>
                        </xsd:choice>
                        <xsd:attribute ref="r:reqId" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор сообщения, ответ на который получен. Необходим для связи запроса и ответа.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:logicalId" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Логический идентификатор сообщения. Необходим для отслеживания запроса при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:oper" default="0">
                                <xsd:annotation>
                                        <xsd:documentation>Номер операциониста RsBank. Если поле не пустое, запрос выполняется от имени указанного пользователя.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:source" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор источника сообщения. Заполняется только при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:destination" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор получателя сообщения. Заполняется только при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:direction" default="0">
                                <xsd:annotation>
                                        <xsd:documentation>Код направленя сообщения. Возможны значения: 0 - запрос, 1 - ответ.Заполняется только при маршрутизации.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:internal" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Для внутреннего использования.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:curdate">
                                <xsd:annotation>
                                        <xsd:documentation>Дата операционного дня, в котором работает операционист.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:sender" default="0">
                                <xsd:annotation>
                                        <xsd:documentation>Тип отправителя сообщения. См. PRJ_001167.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                        <xsd:attribute ref="r:sessionID" default="">
                                <xsd:annotation>
                                        <xsd:documentation>Идентификатор сессии. Используется для Web-интерфейса RS-Bank.
                                        </xsd:documentation>
                                </xsd:annotation>
                        </xsd:attribute>
                </xsd:complexType>
        </xsd:element>
        <xsd:complexType name="paramsType">
                <xsd:annotation>
                        <xsd:documentation>Тип, определяющий контейнер для параметров вызова и возвращаемого значения. </xsd:documentation>
                </xsd:annotation>
                <xsd:sequence>
                        <xsd:element name="param" minOccurs="0" maxOccurs="unbounded">
                                <xsd:annotation>
                                        <xsd:documentation>Контейнер для одного параметра вызова или возвращаемого значения.</xsd:documentation>
                                </xsd:annotation>
                                <xsd:complexType>
                                        <xsd:sequence>
                                                <xsd:element name="value" type="r:valueType">
                                                        <xsd:annotation>
                                                                <xsd:documentation>Значение параметра.
                                                                </xsd:documentation>
                                                        </xsd:annotation>
                                                </xsd:element>
                                        </xsd:sequence>
                                </xsd:complexType>
                        </xsd:element>
                </xsd:sequence>
        </xsd:complexType>
        <xsd:complexType name="valueType">
                <xsd:annotation>
                        <xsd:documentation>Тип определяющий форму записи значения (простого или сложного типа). Содержит идентификацию типа и   непосредственно значение.</xsd:documentation>
                </xsd:annotation>
                <xsd:choice>
                        <xsd:element name="NULL">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует null значение.
                                        </xsd:documentation>
                                </xsd:annotation>
                                <xsd:complexType/>
                        </xsd:element>
                        <xsd:element name="integer" type="xsd:int">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение целого типа.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="boolean" type="xsd:boolean">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение флага.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="string" type="xsd:string" nillable="true">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит строковое значение.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="char">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение типа символ.</xsd:documentation>
                                </xsd:annotation>
                                <xsd:simpleType>
                                        <xsd:restriction base="xsd:string">
                                                <xsd:minLength value="0"/>
                                                <xsd:maxLength value="1"/>
                                        </xsd:restriction>
                                </xsd:simpleType>
                        </xsd:element>
                        <xsd:element name="double" type="xsd:double">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение с плавающей точкой.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="money">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение вещественного числа с фиксированной точкой.</xsd:documentation>
                                </xsd:annotation>
                                <xsd:simpleType>
                                        <xsd:restriction base="xsd:decimal">
                                                <xsd:fractionDigits value="12"/>
                                                <xsd:totalDigits value="44" fixed="false"/>
                                        </xsd:restriction>
                                </xsd:simpleType>
                        </xsd:element>
                        <xsd:element name="date" type="xsd:date">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение даты.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="time" type="xsd:time">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение времени.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="timestamp" type="xsd:dateTime">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение временной метки (дата+время)</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="row" type="xsd:hexBinary">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит значение бинарного объекта.</xsd:documentation>
                                </xsd:annotation>
                        </xsd:element>
                        <xsd:element name="struct">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит описание структуры данных и значение ее полей.</xsd:documentation>
                                </xsd:annotation>
                                <xsd:complexType>
                                        <xsd:sequence>
                                                <xsd:element name="member" maxOccurs="unbounded">
                                                        <xsd:annotation>
                                                                <xsd:documentation>Идентифицирует поле структуры данных.</xsd:documentation>
                                                        </xsd:annotation>
                                                        <xsd:complexType>
                                                                <xsd:sequence>
                                                                        <xsd:element name="name" type="xsd:string">
                                                                                <xsd:annotation>
                                                                                        <xsd:documentation>Задает имя поля структуры данных.
                                                                                        </xsd:documentation>
                                                                                </xsd:annotation>
                                                                        </xsd:element>
                                                                        <xsd:element name="value" type="r:valueType">
                                                                                <xsd:annotation>
                                                                                        <xsd:documentation>Задает значение поля структуры данных.</xsd:documentation>
                                                                                </xsd:annotation>
                                                                        </xsd:element>
                                                                </xsd:sequence>
                                                        </xsd:complexType>
                                                </xsd:element>
                                        </xsd:sequence>
                                </xsd:complexType>
                        </xsd:element>
                        <xsd:element name="array">
                                <xsd:annotation>
                                        <xsd:documentation>Идентифицирует и содержит коллекцию значений.</xsd:documentation>
                                </xsd:annotation>
                                <xsd:complexType>
                                        <xsd:sequence>
                                                <xsd:element name="data">
                                                        <xsd:annotation>
                                                                <xsd:documentation>Контейнер для элементов коллекции.
                                                                </xsd:documentation>
                                                        </xsd:annotation>
                                                        <xsd:complexType>
                                                                <xsd:sequence>
                                                                        <xsd:element name="value" type="r:valueType" minOccurs="0" maxOccurs="unbounded">
                                                                                <xsd:annotation>
                                                                                        <xsd:documentation>Значение элемента коллекции.
                                                                                        </xsd:documentation>
                                                                                </xsd:annotation>
                                                                        </xsd:element>
                                                                </xsd:sequence>
                                                        </xsd:complexType>
                                                </xsd:element>
                                        </xsd:sequence>
                                </xsd:complexType>
                        </xsd:element>
                </xsd:choice>
        </xsd:complexType>
        <xsd:attribute name="reqId" type="xsd:string">
                <xsd:annotation>
                        <xsd:documentation>Аттрибут идентифицирует запрос и ответ, благодаря чему их можно связать.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="logicalId" type="xsd:string">
                <xsd:annotation>
                        <xsd:documentation>Логический идентификатор сообщения. Необходим для отслеживания запроса при маршрутизации.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="oper" type="xsd:integer">
                <xsd:annotation>
                        <xsd:documentation>Номер операциониста RsBank. Если поле не пустое, запрос выполняется от имени указанного пользователя.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="source" type="xsd:string">
                <xsd:annotation>
                        <xsd:documentation>Идентификатор источника сообщения. Заполняется только при маршрутизации.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="destination" type="xsd:string">
                <xsd:annotation>
                        <xsd:documentation>Идентификатор получателя сообщения. Заполняется только при маршрутизации.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="direction" type="xsd:integer">
                <xsd:annotation>
                        <xsd:documentation>Код направленя сообщения. Возможны значения: 0 - запрос, 1 - ответ.Заполняется только при маршрутизации.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="internal" type="xsd:string">
                <xsd:annotation>
                        <xsd:documentation>Для внутреннего использования.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="curdate" type="xsd:date">
                <xsd:annotation>
                        <xsd:documentation>Дата операционного дня, в котором работает операционист.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="sender" type="xsd:integer">
                <xsd:annotation>
                        <xsd:documentation>Тип отправителя сообщения. См. PRJ_001167.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="sessionID" type="xsd:string">
                <xsd:annotation>
                        <xsd:documentation>Идентификатор сессии. Используется для Web-интерфейса RS-Bank.</xsd:documentation>
                </xsd:annotation>
        </xsd:attribute>
</xsd:schema>
