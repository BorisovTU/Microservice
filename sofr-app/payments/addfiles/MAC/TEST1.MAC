ScrMes=0;
LbMes=0;

macro InitMes(H,W,Text)
 ScrMes = ScrCreate(0,0,H,W,Text);
 LbMes =  ScrAddLabel(ScrMes,int((H-50)/2),40,"");
 ScrShow(ScrMes);
end;
macro UseMes(Text)
 ScrSetText(LbMes,string(Text));
end;
macro RemMes()
 ScrDelete(ScrMes);
 ScrMes=0;
end;

macro test()

  VclinitProgress(100000, "Format C: in progress");
  i=0;
  while(i<100000)
    VclUseProgress(i=i+1);
  end;
  VclRemProgress();

  InitMes(100,400,"Format complete");
  i=0;
  while(i<10000)
    UseMes("Delete claster "+i);
    i=i+1;
  end;
  RemMes();
end;